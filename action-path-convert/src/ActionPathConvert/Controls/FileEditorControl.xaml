<UserControl
    x:Class="ActionPathConvert.Controls.FileEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:converters="clr-namespace:ActionPathConvert.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:IsModifiedToForegroundConverter x:Key="IsModifiedToForegroundConverter" />
        <converters:IsModifiedToStatusTextConverter x:Key="IsModifiedToStatusTextConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header with file path and save status  -->
        <Border
            Grid.Row="0"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Text="{Binding FilePath, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='文件: {0}'}"
                    TextTrimming="CharacterEllipsis"
                    ToolTip="{Binding FilePath, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <TextBlock
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="{Binding IsModified, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource IsModifiedToForegroundConverter}}"
                    Text="{Binding IsModified, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource IsModifiedToStatusTextConverter}}" />
            </Grid>
        </Border>

        <!--  Editor  -->
        <Border
            Grid.Row="1"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
            <avalonedit:TextEditor
                x:Name="TextEditor"
                Background="{DynamicResource RegionBrush}"
                BorderThickness="0"
                FontFamily="Consolas"
                FontSize="12"
                Foreground="{DynamicResource PrimaryTextBrush}"
                ShowLineNumbers="True"
                WordWrap="False" />
        </Border>
    </Grid>
</UserControl>

