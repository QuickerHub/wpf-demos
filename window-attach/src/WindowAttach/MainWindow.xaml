<Window x:Class="WindowAttach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="窗口吸附测试" 
        Width="600" 
        Height="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock 
            Grid.Row="0"
            FontSize="18" 
            FontWeight="Bold" 
            Text="窗口吸附测试窗口" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" />
        
        <Button 
            Grid.Row="1"
            Content="打开管理窗口" 
            Click="OpenManagementWindow_Click"
            Padding="15,8"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            FontSize="14"/>
    </Grid>
</Window>

