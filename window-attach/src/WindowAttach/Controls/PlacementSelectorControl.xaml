<UserControl x:Class="WindowAttach.Controls.PlacementSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:WindowAttach.Models">
    <UserControl.Resources>
        <Style x:Key="PlacementButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#80FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Canvas Width="200" Height="160">
        <!-- Central rectangle representing window1 -->
        <Rectangle Width="60" Height="40" 
                   Fill="#40FFFFFF" 
                   Stroke="#80FFFFFF" 
                   StrokeThickness="1"
                   Canvas.Left="70"
                   Canvas.Top="60"/>
        
        <!-- 12 buttons arranged around the rectangle using Canvas positioning -->
        <!-- Left side (3 buttons) -->
        <Button x:Name="LeftTopButton" Content="↖" 
                Width="30" Height="30"
                Canvas.Left="20" Canvas.Top="30"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.LeftTop}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <Button x:Name="LeftCenterButton" Content="←" 
                Width="30" Height="30"
                Canvas.Left="20" Canvas.Top="65"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.LeftCenter}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <Button x:Name="LeftBottomButton" Content="↙" 
                Width="30" Height="30"
                Canvas.Left="20" Canvas.Top="100"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.LeftBottom}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <!-- Top side (3 buttons) -->
        <Button x:Name="TopLeftButton" Content="↖" 
                Width="30" Height="30"
                Canvas.Left="50" Canvas.Top="10"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.TopLeft}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <Button x:Name="TopCenterButton" Content="↑" 
                Width="30" Height="30"
                Canvas.Left="85" Canvas.Top="10"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.TopCenter}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <Button x:Name="TopRightButton" Content="↗" 
                Width="30" Height="30"
                Canvas.Left="120" Canvas.Top="10"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.TopRight}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <!-- Right side (3 buttons) -->
        <Button x:Name="RightTopButton" Content="↗" 
                Width="30" Height="30"
                Canvas.Left="150" Canvas.Top="30"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.RightTop}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <Button x:Name="RightCenterButton" Content="→" 
                Width="30" Height="30"
                Canvas.Left="150" Canvas.Top="65"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.RightCenter}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <Button x:Name="RightBottomButton" Content="↘" 
                Width="30" Height="30"
                Canvas.Left="150" Canvas.Top="100"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.RightBottom}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <!-- Bottom side (3 buttons) -->
        <Button x:Name="BottomLeftButton" Content="↙" 
                Width="30" Height="30"
                Canvas.Left="50" Canvas.Top="120"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.BottomLeft}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <Button x:Name="BottomCenterButton" Content="↓" 
                Width="30" Height="30"
                Canvas.Left="85" Canvas.Top="120"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.BottomCenter}"
                Style="{StaticResource PlacementButtonStyle}"/>
        
        <Button x:Name="BottomRightButton" Content="↘" 
                Width="30" Height="30"
                Canvas.Left="120" Canvas.Top="120"
                Click="PlacementButton_Click"
                Tag="{x:Static models:WindowPlacement.BottomRight}"
                Style="{StaticResource PlacementButtonStyle}"/>
    </Canvas>
</UserControl>

