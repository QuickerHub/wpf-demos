<Window x:Class="WpfDragDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dd="clr-namespace:WpfDragDrop"
        Title="WPF Drag Drop Example" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="拖拽文件到下方区域" 
                   FontSize="16" 
                   Margin="0,0,0,20"/>
        
        <dd:FileDropControl Grid.Row="1"
                           FilesDropped="FileDropControl_FilesDropped">
            <Border Background="LightGray" 
                    Padding="20" 
                    CornerRadius="5"
                    BorderBrush="DarkGray"
                    BorderThickness="2">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="拖拽文件到这里" 
                               FontSize="18" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="FileCountText" 
                               Text="等待文件拖拽..." 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="DarkGray"/>
                </StackPanel>
            </Border>
        </dd:FileDropControl>
    </Grid>
</Window>

