<Window
    x:Class="WpfMonacoEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfMonacoEditor"
    xmlns:ext="clr-namespace:WpfMonacoEditor.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Monaco Editor Diff Editor"
    Width="1400"
    Height="900"
    d:DataContext="{d:DesignInstance local:MainWindow,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="{DynamicResource DefaultWindowBackgroundBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border
            Grid.Row="0"
            Padding="10"
            Background="{DynamicResource SecondaryRegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button
                    Margin="5,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.UpdateEditorContentCommand}"
                    Content="更新编辑器" />
                <Separator Margin="10,0" />
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    Text="原始文本:" />
                <TextBox
                    Width="200"
                    Margin="5,0"
                    Padding="5"
                    Text="{Binding ViewModel.OriginalText, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    Text="修改文本:" />
                <TextBox
                    Width="200"
                    Margin="5,0"
                    Padding="5"
                    Text="{Binding ViewModel.ModifiedText, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Border>

        <!-- WebView -->
        <Border
            Grid.Row="1"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,1,0,0">
            <Grid>
                <wv2:WebView2 x:Name="WebViewControl" />

                <!-- Loading overlay -->
                <Border
                    Background="{DynamicResource RegionBrush}"
                    Opacity="0.95"
                    Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <!-- Loading progress bar -->
                        <ProgressBar
                            Width="200"
                            Height="4"
                            Margin="0,0,0,20"
                            IsIndeterminate="True" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border
            Grid.Row="2"
            Padding="10,5"
            Background="{DynamicResource SecondaryRegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,1,0,0">
            <TextBlock FontSize="12" Text="就绪" />
        </Border>
    </Grid>
</Window>

