<Window
    x:Class="WpfMonacoEditor.EditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfMonacoEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Code Editor"
    Width="1200"
    Height="700"
    d:DataContext="{d:DesignInstance local:EditorWindow,
                                     IsDesignTimeCreatable=True}"
    Background="{DynamicResource DefaultWindowBackgroundBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <wv2:WebView2 x:Name="EditorWebViewControl" />

        <!--  Loading overlay  -->
        <Border
            Background="{DynamicResource RegionBrush}"
            Opacity="0.95"
            Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <!--  Loading progress bar  -->
                <ProgressBar
                    Width="200"
                    Height="4"
                    Margin="0,0,0,20"
                    IsIndeterminate="True" />
            </StackPanel>
        </Border>
    </Grid>
</Window>

