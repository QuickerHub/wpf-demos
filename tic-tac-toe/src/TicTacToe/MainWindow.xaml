<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        xmlns:fa="clr-namespace:FontAwesome5.WPF;assembly=FontAwesomeIconsWpf"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="TicTacToe" Height="400" Width="500">
    <Window.Resources>
        <Style TargetType="Button" x:Key="GameBtnStyle">
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
        </Style>
        <Style x:Key="CircleButton" TargetType="Button">
            <Setter Property="Content">
                <Setter.Value>
                    <fa:SvgAwesome Icon="Regular_Circle" Margin="5"></fa:SvgAwesome>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TimesButton" TargetType="Button">
            <Setter Property="Content">
                <Setter.Value>
                    <fa:SvgAwesome Icon="Light_Times"></fa:SvgAwesome>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Margin="5"
                   FontSize="20"
                   x:Name="MessageBtn"
                   Text=""></TextBlock>
        <Grid x:Name="BtnGird" HorizontalAlignment="Center" Grid.Row="1"
              Height="250" Width="250" 
              Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:GameButton Grid.Column="0" Grid.Row="0" Tag="0" Click="Button_Click"></local:GameButton>
        <local:GameButton Grid.Column="0" Grid.Row="1" Tag="1" Click="Button_Click"></local:GameButton>
        <local:GameButton Grid.Column="0" Grid.Row="2" Tag="2" Click="Button_Click"></local:GameButton>
        <local:GameButton Grid.Column="1" Grid.Row="0" Tag="3" Click="Button_Click"></local:GameButton>
        <local:GameButton Grid.Column="1" Grid.Row="1" Tag="4" Click="Button_Click"></local:GameButton>
        <local:GameButton Grid.Column="1" Grid.Row="2" Tag="5" Click="Button_Click"></local:GameButton>
        <local:GameButton Grid.Column="2" Grid.Row="0" Tag="6" Click="Button_Click"></local:GameButton>
        <local:GameButton Grid.Column="2" Grid.Row="1" Tag="7" Click="Button_Click"></local:GameButton>
        <local:GameButton Grid.Column="2" Grid.Row="2" Tag="8" Click="Button_Click"></local:GameButton>
    </Grid>
        <StackPanel Grid.Column="1" 
                    Grid.RowSpan="2"
                    VerticalAlignment="Center"
                    Margin="15">
            <TextBlock Text="难度选择:" FontSize="16" Margin="8" HorizontalAlignment="Center" FontWeight="Bold"/>
            <ComboBox Name="DifficultyComboBox" Margin="8" Width="140" HorizontalAlignment="Center" FontSize="14">
                <ComboBoxItem Content="简单" Tag="Easy" IsSelected="True"/>
                <ComboBoxItem Content="中等" Tag="Medium"/>
                <ComboBoxItem Content="困难" Tag="Hard"/>
            </ComboBox>
            <Button Name="ReSet" Click="ReSet_Click" Margin="8" Padding="10,5" FontSize="14">重置游戏</Button>
            <TextBlock Name="GameStatusText" Text="" FontSize="13" Margin="8" 
                       HorizontalAlignment="Center" TextWrapping="Wrap" MaxWidth="180"/>
        </StackPanel>
    </Grid>
</Window>
