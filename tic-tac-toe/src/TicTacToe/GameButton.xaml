<Button x:Class="TicTacToe.GameButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToe"
             xmlns:fa="clr-namespace:FontAwesome5.WPF;assembly=FontAwesomeIconsWpf"
        DataContext="{Binding}"
             mc:Ignorable="d" 
        Name="TheButton"
             d:DesignHeight="100" d:DesignWidth="100">
    <Button.Resources>
        <Style TargetType="Button" x:Key="GameBtnStyle">
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
        </Style>
        <Style x:Key="CircleButton" TargetType="Button">
            <Setter Property="Content">
                <Setter.Value>
                    <fa:SvgAwesome Icon="Regular_Circle" Margin="5"></fa:SvgAwesome>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TimesButton" TargetType="Button">
            <Setter Property="Content">
                <Setter.Value>
                    <fa:SvgAwesome Icon="Light_Times"></fa:SvgAwesome>
                </Setter.Value>
            </Setter>
        </Style>
    </Button.Resources>
    <fa:SvgAwesome DataContext="{Binding ElementName=TheButton}">
        <fa:SvgAwesome.Style>
            <Style TargetType="fa:SvgAwesome">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=TheButton,Path=Piece,Mode=TwoWay}" Value="1">
                        <Setter Property="Icon" Value="Regular_Circle"></Setter>
                        <Setter Property="Foreground" Value="Black"></Setter>
                        <Setter Property="Margin" Value="5"></Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ElementName=TheButton,Path=Piece,Mode=TwoWay}" Value="2">
                        <Setter Property="Icon" Value="Light_Times"></Setter>
                        <Setter Property="Foreground" Value="Black"></Setter>
                        <Setter Property="Margin" Value="0"></Setter>
                    </DataTrigger>
                </Style.Triggers>
                <Setter Property="Foreground" Value="Transparent"></Setter>
                <Setter Property="Margin" Value="0"></Setter>
            </Style>
        </fa:SvgAwesome.Style>
    </fa:SvgAwesome>
</Button>
