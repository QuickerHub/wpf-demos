<Window
    x:Class="WpfGobang.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfGobang"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="五子棋"
    Width="820"
    Height="700"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="Ellipse">
            <Setter Property="Stroke" Value="Black" />
            <Setter Property="StrokeThickness" Value="2" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  Status Bar  -->
        <TextBlock
            x:Name="StatusText"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Text="游戏开始！黑子先行" />

        <!--  Game Board  -->
        <Canvas
            x:Name="BoardCanvas"
            Grid.Row="1"
            Grid.Column="0"
            Width="600"
            Height="600"
            Margin="20"
            Background="#DEB887"
            MouseDown="BoardCanvas_MouseDown">
            <!--  Grid lines will be drawn in code-behind  -->
        </Canvas>

        <!--  Control Panel  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            MinWidth="100"
            Margin="20"
            Padding="15"
            VerticalAlignment="Top"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,8"
                    HorizontalAlignment="Left"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="难度选择:" />
                <ComboBox
                    x:Name="DifficultyComboBox"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    FontSize="14"
                    SelectionChanged="DifficultyComboBox_SelectionChanged">
                    <ComboBoxItem
                        Content="简单"
                        IsSelected="True"
                        Tag="Easy" />
                    <ComboBoxItem Content="中等" Tag="Medium" />
                    <ComboBoxItem Content="困难" Tag="Hard" />
                </ComboBox>

                <Button
                    x:Name="ResetButton"
                    Margin="0,0,0,15"
                    Padding="5"
                    HorizontalAlignment="Stretch"
                    Click="ResetButton_Click"
                    Content="重新开始"
                    FontSize="14" />

                <TextBlock
                    x:Name="GameStatusText"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#333333"
                    Text="轮到你了"
                    TextWrapping="Wrap" />

                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="游戏规则:" />
                <TextBlock
                    Margin="0,0,0,4"
                    FontSize="12"
                    Foreground="#666666"
                    Text="· 黑子先行" />
                <TextBlock
                    Margin="0,0,0,4"
                    FontSize="12"
                    Foreground="#666666"
                    Text="· 五子连珠获胜" />
                <TextBlock
                    Margin="0,0,0,0"
                    FontSize="12"
                    Foreground="#666666"
                    Text="· 点击棋盘下棋" />
            </StackPanel>
        </Border>
    </Grid>
</Window>

