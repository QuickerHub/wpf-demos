<Window
    x:Class="QuickerStatisticsInfo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerStatisticsInfo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Quicker Statistics Info"
    Width="400"
    Height="200"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,15"
            FontSize="18"
            FontWeight="Bold"
            Text="Quicker 统计信息" />

        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Margin="0,0,0,5" Text="用户路径：" />
            <TextBox
                x:Name="UserPathTextBox"
                Text="113342-Cea" />
        </StackPanel>

        <Button
            Grid.Row="2"
            Click="ShowStatisticsButton_Click"
            Content="显示统计信息"
            Padding="10,5" />
    </Grid>
</Window>

