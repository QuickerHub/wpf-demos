<Window
    x:Class="QuickerStatisticsInfo.View.StatisticsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerStatisticsInfo.View"
    xmlns:viewModels="clr-namespace:QuickerStatisticsInfo.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="统计信息"
    Width="600"
    Height="500"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,15"
            FontSize="20"
            FontWeight="Bold"
            Text="Quicker动作点赞数统计" />

        <!-- User Info -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Text="{Binding UserInfo}" />
            <TextBlock
                Margin="0,5,0,0"
                FontSize="12"
                Foreground="{Binding StatusForeground}"
                Text="{Binding StatusText}" />
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid
            Grid.Row="2"
            Margin="0,0,0,15"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding PageStatistics}"
            SelectionMode="Single"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            BorderThickness="1"
            BorderBrush="#E0E0E0"
            Background="White"
            RowBackground="White"
            AlternatingRowBackground="#F9F9F9"
            HorizontalGridLinesBrush="#E0E0E0"
            VerticalGridLinesBrush="Transparent">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding PageNumber}"
                    Header="页面"
                    Width="80">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F5F5" />
                            <Setter Property="BorderBrush" Value="#E0E0E0" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Setter Property="Padding" Value="8,6" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="Foreground" Value="#333333" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,6" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Binding="{Binding LikesCount, StringFormat=N0}"
                    Header="点赞数"
                    Width="*">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F5F5" />
                            <Setter Property="BorderBrush" Value="#E0E0E0" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Setter Property="Padding" Value="8,6" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="Foreground" Value="#333333" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,6" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Binding="{Binding CumulativeLikes, StringFormat=N0}"
                    Header="累计点赞"
                    Width="*">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F5F5" />
                            <Setter Property="BorderBrush" Value="#E0E0E0" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Setter Property="Padding" Value="8,6" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="Foreground" Value="#333333" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,6" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Summary -->
        <Border
            Grid.Row="3"
            Padding="10"
            Background="#F5F5F5"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="总点赞数：" />
                <TextBlock
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#1976D2"
                    Text="{Binding TotalLikes, StringFormat=N0}" />
                <TextBlock
                    Grid.Column="2"
                    Margin="0,0,10,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="总动作数：" />
                <TextBlock
                    Grid.Column="3"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#1976D2"
                    Text="{Binding TotalActions, StringFormat=N0}" />
            </Grid>
        </Border>
    </Grid>
</Window>

