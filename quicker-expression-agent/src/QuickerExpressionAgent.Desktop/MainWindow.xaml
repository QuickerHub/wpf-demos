<Window
    x:Class="QuickerExpressionAgent.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:controls="clr-namespace:QuickerExpressionAgent.Desktop.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Desktop"
    xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Quicker Expression Agent"
    Width="1200"
    Height="700"
    d:DataContext="{Binding RelativeSource={RelativeSource Self}}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local:InvertBooleanConverter x:Key="InvertBooleanConverter" />
        <local:MessageTypeConverter x:Key="MessageTypeConverter" />
        <local:NullToBoolConverter x:Key="NullToBoolConverter" />
        
        <!-- Markdig.Wpf Styles -->
        <Style TargetType="{x:Type markdig:MarkdownViewer}">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="AI 表达式生成器" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button
                    Margin="0,0,10,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.OpenChatWindowCommand}"
                    Content="Chat 窗口" />
                <Button
                    Padding="10,5"
                    Command="{Binding ViewModel.OpenTestWindowCommand}"
                    Content="测试窗口" />
            </StackPanel>
        </Grid>

        <!--  Results Section  -->
        <GroupBox
            Grid.Row="1"
            Margin="0,0,0,20"
            Header="生成结果">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="500" />
                </Grid.ColumnDefinitions>

                <!--  Left: Expression  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Parsed Expression  -->
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        FontWeight="SemiBold"
                        Text="解析后的表达式：" />

                    <avalonEdit:TextEditor
                        x:Name="ParsedExpressionEditor"
                        Grid.Row="1"
                        Margin="0,0,0,15"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        FontFamily="Consolas"
                        FontSize="12"
                        HorizontalScrollBarVisibility="Auto"
                        ShowLineNumbers="True"
                        SyntaxHighlighting="C#"
                        VerticalScrollBarVisibility="Auto"
                        WordWrap="True" />

                    <!--  Execution Result  -->
                    <TextBlock
                        Grid.Row="2"
                        Margin="0,15,0,10"
                        FontWeight="SemiBold"
                        Text="执行结果：" />

                    <ScrollViewer
                        Grid.Row="3"
                        MaxHeight="200"
                        VerticalScrollBarVisibility="Auto">
                        <TextBlock
                            FontFamily="Consolas"
                            FontSize="12"
                            Foreground="{Binding ViewModel.ResultForeground}"
                            Text="{Binding ViewModel.ExecutionResult, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </Grid>

                <!--  Right: Variable List  -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Variable List Header  -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Text="变量测试值" />
                        <Button
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Padding="8,4"
                            Command="{Binding ViewModel.CreateVariableCommand}"
                            Content="+ 添加变量"
                            FontSize="12" />
                    </Grid>

                    <!--  Variable List  -->
                    <ListBox
                        Grid.Row="1"
                        Background="Transparent"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        ItemsSource="{Binding ViewModel.VariableList}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,5"
                                    Padding="10,8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!--  Type Icon  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Top"
                                            FontSize="16">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="ABC" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsListType}" Value="True">
                                                            <Setter Property="Text" Value="☰" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!--  Variable Name  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,0,0,5"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="{Binding VarName}" />

                                        <!--  Variable Value Input  -->
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            MinHeight="30"
                                            AcceptsReturn="True"
                                            Background="White"
                                            BorderBrush="#CCCCCC"
                                            FontSize="12"
                                            Text="{Binding ValueText, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!--  Execute Button  -->
                    <Button
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        Padding="10,8"
                        HorizontalAlignment="Stretch"
                        Command="{Binding ViewModel.ExecuteExpressionCommand}"
                        Content="执行表达式"
                        FontSize="14"
                        IsEnabled="{Binding ViewModel.IsGenerating, Converter={StaticResource InvertBooleanConverter}}" />
                </Grid>

                <!--  Right: Agent Chat  -->
                <GroupBox
                    Grid.Column="4"
                    Margin="10,0,0,0"
                    Header="Agent 对话">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Chat Messages ListBox  -->
                        <ListBox
                            x:Name="ChatListBox"
                            Grid.Row="0"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding ViewModel.ChatMessages}"
                            ScrollViewer.CanContentScroll="False"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectionMode="Single">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.Resources>
                                <!--  Default template for text messages  -->
                                <DataTemplate x:Key="TextMessageTemplate">
                                    <Border
                                        Margin="0,5,0,5"
                                        Padding="12,8"
                                        Background="{Binding BackgroundBrush}"
                                        CornerRadius="8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  Message Header  -->
                                            <Grid Grid.Row="0" Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Icon}" />

                                                <TextBlock
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding MessageType, Converter={StaticResource MessageTypeConverter}}" />

                                                <TextBlock
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                    Foreground="#666666"
                                                    Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" />
                                            </Grid>

                                            <!--  Message Content  -->
                                            <ContentControl Grid.Row="1" Content="{Binding}">
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <!-- Default: TextBlock for User messages -->
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <TextBlock
                                                                        FontFamily="Consolas"
                                                                        FontSize="12"
                                                                        Foreground="{Binding ForegroundBrush}"
                                                                        LineHeight="18"
                                                                        Text="{Binding Content}"
                                                                        TextWrapping="Wrap" />
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <!-- Markdown for Assistant messages -->
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MessageType}" Value="Assistant">
                                                                <Setter Property="ContentTemplate">
                                                                    <Setter.Value>
                                                                        <DataTemplate>
                                                                            <markdig:MarkdownViewer
                                                                                Markdown="{Binding Content}"
                                                                                Background="Transparent" />
                                                                        </DataTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>
                                        </Grid>
                                    </Border>
                                </DataTemplate>

                                <!--  Template for ExpressionTest messages with ExpressionItem  -->
                                <DataTemplate x:Key="ExpressionTestTemplate">
                                    <Border
                                        Margin="0,5,0,5"
                                        Padding="12,8"
                                        Background="{Binding BackgroundBrush}"
                                        CornerRadius="8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  Message Header  -->
                                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Icon}" />

                                                <TextBlock
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding MessageType, Converter={StaticResource MessageTypeConverter}}" />

                                                <TextBlock
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                    Foreground="#666666"
                                                    Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" />
                                            </Grid>

                                            <!--  ExpressionItem Control  -->
                                            <controls:ExpressionItemControl Grid.Row="1" ViewModel="{Binding ExpressionItem}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>

                                <!--  Template for ToolCall messages with ToolCallItem  -->
                                <DataTemplate x:Key="ToolCallTemplate">
                                    <Border
                                        Margin="0,5,0,5"
                                        Padding="12,8"
                                        Background="{Binding BackgroundBrush}"
                                        CornerRadius="8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  Message Header  -->
                                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Icon}" />

                                                <TextBlock
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding MessageType, Converter={StaticResource MessageTypeConverter}}" />

                                                <TextBlock
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                    Foreground="#666666"
                                                    Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" />
                                            </Grid>

                                            <!--  ToolCall Control  -->
                                            <controls:ToolCallControl Grid.Row="1" ViewModel="{Binding ToolCallItem}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.Resources>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Setter Property="ContentTemplate" Value="{StaticResource TextMessageTemplate}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ExpressionItem, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                        <Setter Property="ContentTemplate" Value="{StaticResource ExpressionTestTemplate}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ToolCallItem, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                        <Setter Property="ContentTemplate" Value="{StaticResource ToolCallTemplate}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!--  Input Section  -->
                        <Border
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            Padding="10,8"
                            Background="#F5F5F5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0">
    <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox
                                    x:Name="ChatInputTextBox"
                                    Grid.Column="0"
                                    MinHeight="40"
                                    MaxHeight="100"
                                    Margin="0,0,10,0"
                                    Padding="10,8"
                                    AcceptsReturn="True"
                                    Background="White"
                                    BorderBrush="#D0D0D0"
                                    FontSize="14"
                                    PreviewKeyDown="ChatInputTextBox_PreviewKeyDown"
                                    Text="{Binding ViewModel.ChatInputText, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />

                                <Button
                                    Grid.Column="1"
                                    MinWidth="80"
                                    Padding="20,8"
                                    Command="{Binding ViewModel.GenerateCommand}"
                                    Content="发送"
                                    FontSize="14"
                                    IsEnabled="{Binding ViewModel.IsGenerating, Converter={StaticResource InvertBooleanConverter}}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>

                        <!--  Status Footer  -->
                        <Border
                            Grid.Row="2"
                            Padding="10,5"
                            Background="#F0F0F0"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0"
                            Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="11"
                                Foreground="#666666"
                                Text="Agent 正在运行中..." />
                        </Border>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

        <!--  Status Bar  -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding ViewModel.StatusText, Mode=OneWay}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar
                    Width="100"
                    Height="16"
                    IsIndeterminate="{Binding ViewModel.IsGenerating}"
                    Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
