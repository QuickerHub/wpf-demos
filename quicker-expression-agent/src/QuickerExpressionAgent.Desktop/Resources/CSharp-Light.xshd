<?xml version="1.0"?>
<!--
    C# Syntax Highlighting Definition - Light Theme (VS Code Light+)
    Based on VS Code Light+ theme color scheme
    This file defines colors only, syntax rules are inherited from base C# definition
-->
<SyntaxDefinition name="C# Light" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
    <!-- VS Code Light+ Theme Colors -->
    <Color name="Keyword" foreground="#0000FF" fontWeight="bold" />
    <Color name="String" foreground="#008000" />
    <Color name="Comment" foreground="#008000" />
    <Color name="Number" foreground="#0981AB" />
    <Color name="Type" foreground="#2B91AF" />
    <Color name="Method" foreground="#74531F" />
    <Color name="Property" foreground="#FF0000" />
    <Color name="Preprocessor" foreground="#800080" />
    <Color name="XmlAttribute" foreground="#FF0000" />
    <Color name="XmlAttributeValue" foreground="#000000" />
    <Color name="XmlTag" foreground="#800080" />
    <Color name="XmlComment" foreground="#008000" />
    <Color name="XmlCData" foreground="#808080" />
    <Color name="XmlEntity" foreground="#800080" />
    <Color name="XmlText" foreground="#000000" />
    <Color name="DefaultText" foreground="#000000" />
    
    <!-- Minimal RuleSet to make the file valid (rules are inherited from base C# definition) -->
    <RuleSet>
        <!-- Empty rule set - colors will be applied to base C# definition -->
    </RuleSet>
</SyntaxDefinition>

