<UserControl
    x:Class="QuickerExpressionAgent.Desktop.Controls.ExpressionItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:desktop="clr-namespace:QuickerExpressionAgent.Desktop"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Desktop.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:QuickerExpressionAgent.Desktop.ViewModels"
    x:Name="TheExpressionItemControl"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <desktop:InvertBooleanConverter x:Key="InvertBooleanConverter" />
    </UserControl.Resources>
    <Border
        Padding="8"
        Background="White"
        BorderBrush="#D0D0D0"
        BorderThickness="1"
        CornerRadius="4"
        DataContext="{Binding ElementName=TheExpressionItemControl}">
        <Grid>
            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontFamily="Consolas"
                Foreground="#666666"
                Text="{Binding ViewModel.Language, StringFormat='{}{0}'}" />
            <Expander
                Padding="0"
                HorizontalContentAlignment="Stretch"
                IsExpanded="{Binding ViewModel.IsExpanded}">
                <!--  Header - Clickable area  -->
                <Expander.Header>
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="Black"
                        Text="表达式项" />
                </Expander.Header>

                <!--  Content Area - Variables + Expression + Result  -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Variables Section (collapsible)  -->
                    <Expander
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        IsExpanded="{Binding ViewModel.ShowVariables}">
                        <Expander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="Black"
                                    Text="变量定义" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#666666"
                                    Text="{Binding ViewModel.CollapsedVariableText}"
                                    TextTrimming="CharacterEllipsis" />
                            </Grid>
                        </Expander.Header>

                        <ItemsControl Margin="16,4,0,0" ItemsSource="{Binding ViewModel.VariableList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            FontFamily="Consolas"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="Black"
                                            Text="{Binding VarName}" />

                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="6,0,6,0"
                                            FontFamily="Consolas"
                                            FontSize="11"
                                            Foreground="#666666"
                                            Text="{Binding VarType, StringFormat='({0})'}" />

                                        <TextBlock
                                            Grid.Column="2"
                                            FontFamily="Consolas"
                                            FontSize="11"
                                            Foreground="#666666"
                                            Text="{Binding ValueText, StringFormat='= {0}'}"
                                            TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <!--  Expression Section  -->
                    <Expander Grid.Row="1" IsExpanded="True">
                        <Expander.Header>
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="Black"
                                Text="表达式" />
                        </Expander.Header>

                        <Border
                            Margin="0,4,0,0"
                            Padding="4"
                            Background="#F5F5F5"
                            BorderBrush="#D0D0D0"
                            BorderThickness="1"
                            CornerRadius="2">
                            <Grid>
                                <!--  Code Display with Syntax Highlighting  -->
                                <!--<TextBox
                                    x:Name="ExpressionEditor"
                                    IsReadOnly="True"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    TextWrapping="Wrap"
                                    Text="{Binding ViewModel.Expression, Mode=TwoWay}"
                                    />-->
                                <local:SyntaxHighlightedTextBox
                                    x:Name="ExpressionEditor"
                                    IsReadOnly="True"
                                    SuperText="{Binding ViewModel.Expression, Mode=TwoWay}"
                                    SyntaxHighlighting="C#" />

                                <!--  Run Button (overlay on top right)  -->
                                <Button
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,0,0"
                                    Padding="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding ViewModel.ExecuteCommand}"
                                    Cursor="Hand"
                                    IsEnabled="{Binding ViewModel.IsExecuting, Converter={StaticResource InvertBooleanConverter}}"
                                    ToolTip="执行表达式">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E0E0E0" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="14"
                                        Foreground="#0078D4"
                                        Text="&#xE768;" />
                                </Button>
                            </Grid>
                        </Border>
                    </Expander>

                    <!--  Execution Result Section  -->
                    <Expander
                        Grid.Row="2"
                        IsExpanded="True"
                        Visibility="{Binding ViewModel.ShowExecutionResult, Converter={StaticResource BoolToVis}}">
                        <Expander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="Black"
                                    Text="执行结果" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#666666">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="成功" />
                                            <Setter Property="Foreground" Value="#28A745" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ViewModel.ExecutionSuccess}" Value="False">
                                                    <Setter Property="Text" Value="失败" />
                                                    <Setter Property="Foreground" Value="#DC3545" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Expander.Header>

                        <Border
                            Margin="0,4,0,0"
                            Padding="4"
                            BorderThickness="1"
                            CornerRadius="2">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#E7F5E7" />
                                    <Setter Property="BorderBrush" Value="#C3E6C3" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ViewModel.ExecutionSuccess}" Value="False">
                                            <Setter Property="Background" Value="#F8E7E7" />
                                            <Setter Property="BorderBrush" Value="#E6C3C3" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock
                                FontFamily="Consolas"
                                FontSize="12"
                                TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#155724" />
                                        <Setter Property="Text" Value="{Binding ViewModel.ExecutionResult, Mode=OneWay}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ViewModel.ExecutionSuccess}" Value="False">
                                                <Setter Property="Foreground" Value="#721C24" />
                                                <Setter Property="Text" Value="{Binding ViewModel.ExecutionError, Mode=OneWay}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </Expander>
                </Grid>
            </Expander>
        </Grid>
    </Border>
</UserControl>

