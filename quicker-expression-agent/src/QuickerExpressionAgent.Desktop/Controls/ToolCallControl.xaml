<UserControl
    x:Class="QuickerExpressionAgent.Desktop.Controls.ToolCallControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:desktop="clr-namespace:QuickerExpressionAgent.Desktop"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Desktop.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:QuickerExpressionAgent.Desktop.ViewModels"
    x:Name="TheToolCallControl"
    d:DesignHeight="300"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    <Border
        Padding="8"
        Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
        BorderBrush="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="4"
        DataContext="{Binding ElementName=TheToolCallControl}">
        <Expander HorizontalContentAlignment="Stretch" IsExpanded="{Binding ViewModel.IsExpanded}">
            <!--  Header - Clickable area  -->
            <Expander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Function Name  -->
                    <TextBlock
                        Grid.Row="0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Text="{Binding ViewModel.FunctionName}" />

                    <!--  Description (gray, one line, auto-ellipsis)  -->
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,2,0,0"
                        VerticalAlignment="Center"
                        FontSize="11"
                        Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                        Text="{Binding ViewModel.Description}"
                        TextTrimming="CharacterEllipsis" />
                </Grid>
            </Expander.Header>

            <!--  Content Area - Input Parameters + Output Result  -->
            <Grid Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Input Parameters Section  -->
                <Expander
                    Grid.Row="0"
                    Margin="0,0,0,8"
                    IsExpanded="True">
                    <Expander.Header>
                        <TextBlock
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="输入参数" />
                    </Expander.Header>

                    <ItemsControl Margin="16,4,0,0" ItemsSource="{Binding ViewModel.InputParameters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        FontFamily="Consolas"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Text="{Binding Title, StringFormat='{}{0}:'}" />

                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="6,0,0,0"
                                        FontFamily="Consolas"
                                        FontSize="12"
                                        Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                        Text="{Binding Description}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="Wrap" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander>

                <!--  Output Result Section  -->
                <Expander
                    Grid.Row="1"
                    IsExpanded="True"
                    Visibility="{Binding ViewModel.HasOutputResult, Converter={StaticResource BoolToVis}}">
                    <Expander.Header>
                        <TextBlock
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="输出结果" />
                    </Expander.Header>

                    <Border
                        Margin="0,4,0,0"
                        Padding="8"
                        Background="{ui:ThemeResource ControlFillColorSecondaryBrush}"
                        BorderBrush="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="2">
                        <TextBlock
                            FontFamily="Consolas"
                            FontSize="12"
                            Text="{Binding ViewModel.OutputResult, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </Border>
                </Expander>
            </Grid>
        </Expander>
    </Border>
</UserControl>

