<ui:FluentWindow
    x:Class="QuickerExpressionAgent.Desktop.Windows.ApiConfigTemplateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="选择 API 配置模板"
    Width="500"
    Height="600"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.Resources>
            <Style TargetType="ListBoxItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="0,0,0,8" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border
                                x:Name="Bd"
                                Padding="12"
                                Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                BorderBrush="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <ContentPresenter
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="{ui:ThemeResource ControlFillColorSecondaryBrush}" />
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{ui:ThemeResource ControlStrokeColorDefaultBrush}" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#E3F2FD" />
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#2196F3" />
                                    <Setter TargetName="Bd" Property="BorderThickness" Value="2" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,12"
            FontSize="16"
            FontWeight="SemiBold"
            Text="请选择 API 配置模板：" />

        <ListBox
            x:Name="TemplateListBox"
            Grid.Row="1"
            Margin="0,0,0,12"
            BorderThickness="0"
            Background="Transparent"
            MouseDoubleClick="TemplateListBox_MouseDoubleClick"
            SelectionChanged="TemplateListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{Binding Name}" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="12"
                            Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                            Text="{Binding Description}" />
                        <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                            <TextBlock FontSize="11" Foreground="{ui:ThemeResource TextFillColorDisabledBrush}" Text="模型: " />
                            <TextBlock FontSize="11" Foreground="{ui:ThemeResource TextFillColorDisabledBrush}" Text="{Binding Config.ModelId}" />
                            <TextBlock Margin="8,0,0,0" FontSize="11" Foreground="{ui:ThemeResource TextFillColorDisabledBrush}" Text=" | " />
                            <TextBlock FontSize="11" Foreground="{ui:ThemeResource TextFillColorDisabledBrush}" Text="{Binding Config.BaseUrl}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ui:Button
                Margin="0,0,8,0"
                Click="CancelButton_Click"
                Content="取消" />
            <ui:Button
                x:Name="OkButton"
                IsEnabled="False"
                Click="OkButton_Click"
                Content="确定" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>

