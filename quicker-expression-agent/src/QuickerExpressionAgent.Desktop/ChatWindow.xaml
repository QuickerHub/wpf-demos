<Window
    x:Class="QuickerExpressionAgent.Desktop.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:QuickerExpressionAgent.Desktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
    Title="Quicker Expression Agent - Chat"
    Width="1000"
    Height="700"
    d:DataContext="{Binding RelativeSource={RelativeSource Self}}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local:InvertBooleanConverter x:Key="InvertBooleanConverter" />
        <local:MessageTypeConverter x:Key="MessageTypeConverter" />
        <local:NullToBoolConverter x:Key="NullToBoolConverter" />


    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="AI è¡¨è¾¾å¼ç”Ÿæˆå™¨ - Chat" />
            <TextBlock
                Grid.Column="1"
                FontSize="12"
                Foreground="{Binding ViewModel.IsConnected, Converter={StaticResource BoolToVis}, ConverterParameter=Green|Red}"
                Text="{Binding ViewModel.StatusText}" />
        </Grid>

        <!--  Chat Section  -->
        <GroupBox
            Grid.Row="1"
            Margin="0,0,0,20"
            Header="å¯¹è¯">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Chat Messages ListBox  -->
                <ListBox
                    x:Name="ChatListBox"
                    Grid.Row="0"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding ViewModel.ChatMessages}"
                    ScrollViewer.CanContentScroll="False"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectionMode="Single">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.Resources>
                        <!--  Default template for text messages  -->
                        <DataTemplate x:Key="TextMessageTemplate">
                            <Border
                                Margin="0,5,0,5"
                                Padding="12,8"
                                Background="{Binding BackgroundBrush}"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Message Header  -->
                                    <Grid Grid.Row="0" Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{Binding Icon}" />

                                        <TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="{Binding MessageType, Converter={StaticResource MessageTypeConverter}}" />

                                        <TextBlock
                                            Grid.Column="2"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="#666666"
                                            Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" />
                                    </Grid>

                                    <!--  Message Content  -->
                                    <ContentControl Grid.Row="1" Content="{Binding}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <!--  Default: TextBlock for User messages  -->
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <TextBlock
                                                                FontFamily="Segoe UI, Microsoft YaHei, sans-serif"
                                                                FontSize="12"
                                                                Foreground="{Binding ForegroundBrush}"
                                                                LineHeight="20"
                                                                Text="{Binding Content}"
                                                                TextWrapping="Wrap" />
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <!--  Markdown for Assistant messages  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding MessageType}" Value="Assistant">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <md:MarkdownScrollViewer
                                                                        Background="Transparent"
                                                                        IsEnabled="False"
                                                                        Markdown="{Binding Content}" />
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </Grid>
                            </Border>
                        </DataTemplate>

                        <!--  Template for ToolCall messages with ToolCallItem  -->
                        <DataTemplate x:Key="ToolCallTemplate">
                            <Border
                                Margin="0,5,0,5"
                                Padding="12,8"
                                Background="{Binding BackgroundBrush}"
                                CornerRadius="8">
                                <Expander IsExpanded="{Binding ToolCallItem.IsExpanded}">
                                    <!--  Expander Header  -->
                                    <Expander.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                Margin="0,0,8,0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Text="ðŸ”§" />

                                            <TextBlock
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Text="{Binding ToolCallItem.FunctionName, StringFormat='å·¥å…·è°ƒç”¨: {0}'}" />

                                            <TextBlock
                                                Grid.Column="2"
                                                VerticalAlignment="Center"
                                                FontSize="10"
                                                Foreground="#666666"
                                                Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" />
                                        </Grid>
                                    </Expander.Header>

                                    <!--  Expander Content - Markdown Display  -->
                                    <md:MarkdownScrollViewer
                                        Margin="0,8,0,0"
                                        Background="Transparent"
                                        IsEnabled="False"
                                        Markdown="{Binding ToolCallItem.MarkdownContent}"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                                </Expander>
                            </Border>
                        </DataTemplate>
                    </ListBox.Resources>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="ContentTemplate" Value="{StaticResource TextMessageTemplate}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ToolCallItem, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource ToolCallTemplate}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!--  Input Section  -->
                <Border
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Padding="10,8"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="ChatInputTextBox"
                            Grid.Column="0"
                            MinHeight="40"
                            MaxHeight="100"
                            Margin="0,0,10,0"
                            Padding="10,8"
                            AcceptsReturn="True"
                            Background="White"
                            BorderBrush="#D0D0D0"
                            FontSize="14"
                            PreviewKeyDown="ChatInputTextBox_PreviewKeyDown"
                            Text="{Binding ViewModel.ChatInputText, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />

                        <Button
                            Grid.Column="1"
                            MinWidth="80"
                            Padding="20,8"
                            Command="{Binding ViewModel.GenerateCommand}"
                            Content="å‘é€"
                            FontSize="14"
                            IsEnabled="{Binding ViewModel.IsGenerating, Converter={StaticResource InvertBooleanConverter}}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!--  Status Footer  -->
                <Border
                    Grid.Row="2"
                    Padding="10,5"
                    Background="#F0F0F0"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0"
                    Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="11"
                        Foreground="#666666"
                        Text="Agent æ­£åœ¨è¿è¡Œä¸­..." />
                </Border>
            </Grid>
        </GroupBox>

        <!--  Status Bar  -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding ViewModel.StatusText, Mode=OneWay}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar
                    Width="100"
                    Height="16"
                    IsIndeterminate="{Binding ViewModel.IsGenerating}"
                    Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

