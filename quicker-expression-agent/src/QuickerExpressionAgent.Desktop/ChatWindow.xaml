<Window
    x:Class="QuickerExpressionAgent.Desktop.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:QuickerExpressionAgent.Desktop.Behaviors"
    xmlns:controls="clr-namespace:QuickerExpressionAgent.Desktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AI表达式生成器"
    Width="600"
    Height="700"
    d:DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CloseCommand}" />
    </Window.InputBindings>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <local:InvertBooleanConverter x:Key="InvertBooleanConverter" />
        <local:NullToBoolConverter x:Key="NullToBoolConverter" />

        <!--  Custom Expander Style for ToolCall - Transparent, no border, minimal  -->
        <Style x:Key="ToolCallExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ExpandDirection" Value="Down" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Grid Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!--  Header ToggleButton - Transparent with expander icon  -->
                            <ToggleButton
                                x:Name="ExpanderToggleButton"
                                Grid.Row="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}, Mode=TwoWay}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <!--  Header Content  -->
                                                <ContentPresenter
                                                    Grid.Column="0"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    Content="{TemplateBinding Content}"
                                                    ContentTemplate="{TemplateBinding ContentTemplate}" />
                                                <!--  Expander Icon - Right side, show on hover  -->
                                                <ui:SymbolIcon
                                                    x:Name="ExpanderIcon"
                                                    Grid.Column="1"
                                                    Width="12"
                                                    Height="12"
                                                    Margin="6,0,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                    Foreground="#999999"
                                                    Opacity="0"
                                                    Symbol="ChevronRight12">
                                                    <ui:SymbolIcon.Style>
                                                        <Style TargetType="ui:SymbolIcon">
                                                            <Style.Triggers>
                                                                <!--  Show on hover - bind to parent ToggleButton  -->
                                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                                    <Setter Property="Opacity" Value="1" />
                                                                </DataTrigger>
                                                                <!--  Change symbol when expanded  -->
                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                                    <Setter Property="Symbol" Value="ChevronDown12" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ui:SymbolIcon.Style>
                                                </ui:SymbolIcon>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                                <ContentPresenter Content="{TemplateBinding Header}" />
                            </ToggleButton>
                            <!--  Content  -->
                            <ContentPresenter
                                Grid.Row="1"
                                Content="{TemplateBinding Content}"
                                Visibility="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}, Converter={StaticResource BoolToVis}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <!--<Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="AI 表达式生成器 - Chat" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="12"
                Foreground="{Binding ViewModel.IsConnected, Converter={StaticResource BoolToVis}, ConverterParameter=Green|Red}"
                Text="{Binding ViewModel.StatusText}" />
        </Grid>-->

        <!--  Chat Section  -->
        <GroupBox
            Grid.Row="1"
            Margin="0,0,0,20"
            Background="#FFF8F8F8"
            Header="对话">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Chat Messages ListBox  -->
                <ListBox
                    x:Name="ChatListBox"
                    Grid.Row="0"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding ViewModel.ChatMessages}"
                    ScrollViewer.CanContentScroll="False"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectionMode="Single">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVis}}" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.Resources>
                        <!--  Default template for text messages  -->
                        <DataTemplate x:Key="TextMessageTemplate">
                            <Border
                                Margin="0,1,0,1"
                                Padding="0"
                                CornerRadius="6">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <!--  Default: User messages - White box  -->
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                                        <Setter Property="BorderThickness" Value="1" />
                                        <!--  Assistant messages - Transparent, blend with background  -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding MessageType}" Value="Assistant">
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="BorderThickness" Value="0" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <!--  Message Content  -->
                                <ContentControl VerticalContentAlignment="Center" Content="{Binding}">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <!--  Default: TextBlock for User messages  -->
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <Border Padding="12">
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="{Binding ForegroundBrush}"
                                                                Text="{Binding Content}"
                                                                TextWrapping="Wrap" />
                                                        </Border>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <!--  Markdown for Assistant messages  -->
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding MessageType}" Value="Assistant">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <md:MarkdownScrollViewer
                                                                    Background="Transparent"
                                                                    IsEnabled="False"
                                                                    Markdown="{Binding Content}" />
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </Border>
                        </DataTemplate>

                        <!--  Template for ToolCall messages with ToolCallItem  -->
                        <DataTemplate x:Key="ToolCallTemplate">
                            <Border
                                Margin="0,1,0,1"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0">
                                <Expander
                                    Margin="0"
                                    IsExpanded="{Binding ToolCallItem.IsExpanded}"
                                    Style="{StaticResource ToolCallExpanderStyle}">
                                    <!--  Expander Header - Simplified and subtle  -->
                                    <Expander.Header>
                                        <TextBlock
                                            Padding="12,0"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="#999999"
                                            Text="{Binding ToolCallItem.FunctionName}" />
                                    </Expander.Header>

                                    <!--  Expander Content - Markdown Display  -->
                                    <Border
                                        Margin="12,6"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                        <md:MarkdownScrollViewer
                                            Margin="12,4,12,0"
                                            Background="Transparent"
                                            IsEnabled="False"
                                            Markdown="{Binding ToolCallItem.MarkdownContent}"
                                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                            ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                                    </Border>
                                </Expander>
                            </Border>
                        </DataTemplate>
                    </ListBox.Resources>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="ContentTemplate" Value="{StaticResource TextMessageTemplate}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ToolCallItem, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource ToolCallTemplate}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!--  Input Section  -->
                <Border
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    Background="Transparent"
                    BorderThickness="0,1,0,0">
                    <Grid>
                        <!--  Message Input Row  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ComboBox
                                x:Name="ApiConfigComboBox"
                                Grid.Column="0"
                                MinWidth="80"
                                MaxWidth="120"
                                VerticalAlignment="Center"
                                FontSize="11"
                                ItemsSource="{Binding ViewModel.AgentViewModel.AvailableApiConfigs}"
                                SelectedItem="{Binding ViewModel.AgentViewModel.SelectedApiConfig, Mode=TwoWay}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="11" Text="{Binding VisualTitle}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <ui:Button
                                Grid.Column="1"
                                Width="32"
                                Height="32"
                                Margin="0,0,4,0"
                                Padding="6"
                                VerticalAlignment="Center"
                                Command="{Binding ViewModel.OpenApiConfigCommand}"
                                ToolTip="配置 API">
                                <ui:SymbolIcon Symbol="Settings24" />
                            </ui:Button>

                            <ui:TextBox
                                x:Name="ChatInputTextBox"
                                Grid.Column="2"
                                MaxHeight="100"
                                Padding="10,8"
                                behaviors:EnterCommandBehavior.EnterCommand="{Binding ViewModel.GenerateFromTextBoxCommand}"
                                AcceptsReturn="True"
                                FontSize="14"
                                Text="{Binding ViewModel.ChatInputText, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />

                            <ui:Button
                                Grid.Column="3"
                                Width="36"
                                Height="36"
                                Padding="8"
                                Command="{Binding ViewModel.GenerateCommand}">
                                <ui:SymbolIcon>
                                    <ui:SymbolIcon.Style>
                                        <Style TargetType="ui:SymbolIcon">
                                            <Setter Property="Symbol" Value="ArrowUp24" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ViewModel.IsGenerating}" Value="True">
                                                    <Setter Property="Symbol" Value="Stop24" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ui:SymbolIcon.Style>
                                </ui:SymbolIcon>
                            </ui:Button>
                        </Grid>
                    </Grid>
                </Border>

                <!--  Status Footer  -->
                <Border
                    Grid.Row="2"
                    Padding="10,5"
                    Background="#F0F0F0"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0"
                    Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="11"
                        Foreground="#666666"
                        Text="Agent 正在运行中..." />
                </Border>
            </Grid>
        </GroupBox>

        <!--  Status Bar  -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding ViewModel.StatusText, Mode=OneWay}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse
                        Width="8"
                        Height="8"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Gray" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ViewModel.IsCodeEditorConnected}" Value="True">
                                        <Setter Property="Fill" Value="Green" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock FontSize="11" Foreground="#666666">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="未连接代码窗口" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ViewModel.IsCodeEditorConnected}" Value="True">
                                        <Setter Property="Text" Value="已连接代码窗口" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <TextBlock
                    Margin="10,0,0,0"
                    FontSize="11"
                    Foreground="#666666"
                    Text="{Binding ViewModel.TokenUsageText, Mode=OneWay}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar
                    Width="100"
                    Height="16"
                    IsIndeterminate="{Binding ViewModel.IsGenerating}"
                    Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

