<Page
    x:Class="QuickerExpressionAgent.Desktop.Pages.InfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Desktop.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="关于"
    d:DataContext="{d:DesignInstance local:InfoPage,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Application Info Card  -->
        <GroupBox
            Grid.Row="0"
            Margin="0,0,0,12"
            Header="应用程序信息">
            <StackPanel Margin="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,12,8"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="产品名称:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,8"
                        VerticalAlignment="Center"
                        Text="{Binding ViewModel.ProductName}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,12,8"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="文件版本:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,8"
                        VerticalAlignment="Center"
                        Text="{Binding ViewModel.FileVersion}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,0,12,8"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="程序集版本:" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,0,0,8"
                        VerticalAlignment="Center"
                        Text="{Binding ViewModel.AssemblyVersion}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,0,12,8"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="版本:" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="0,0,0,8"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{Binding ViewModel.Version}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="0,0,12,8"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="公司:" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="0,0,0,8"
                        VerticalAlignment="Center"
                        Text="{Binding ViewModel.CompanyName}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="0,0,12,8"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="版权:" />
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="0,0,0,8"
                        VerticalAlignment="Center"
                        Text="{Binding ViewModel.Copyright}" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        VerticalAlignment="Top"
                        FontWeight="SemiBold"
                        Text="描述:" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="1"
                        VerticalAlignment="Top"
                        Text="{Binding ViewModel.Description}"
                        TextWrapping="Wrap" />
                </Grid>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>

