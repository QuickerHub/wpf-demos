<Page
    x:Class="QuickerExpressionAgent.Desktop.Pages.ApiConfigPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Desktop.Pages"
    xmlns:localConverters="clr-namespace:QuickerExpressionAgent.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="API 配置"
    d:DataContext="{d:DesignInstance local:ApiConfigPage, IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <localConverters:InvertBooleanToVisibilityConverter x:Key="InvertBoolToVis" />
    </Page.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                FontSize="20"
                FontWeight="Bold"
                Text="API 配置列表" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:Button
                    Margin="0,0,8,0"
                    Command="{Binding ViewModel.AddConfigCommand}"
                    Content="添加配置" />
                <ui:Button
                    Command="{Binding ViewModel.SaveAllCommand}"
                    Content="保存全部" />
            </StackPanel>
        </Grid>

        <!-- Config List -->
        <ListBox
            Grid.Row="1"
            ItemsSource="{Binding ViewModel.ConfigItems}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            BorderThickness="0"
            Background="Transparent">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="0,0,0,8"
                        Padding="12"
                        Background="White"
                        BorderBrush="#D0D0D0"
                        BorderThickness="1"
                        CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Header with Edit Button -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#333333"
                                        Text="模型: " />
                                    <TextBlock
                                        FontSize="14"
                                        Foreground="#555555"
                                        Text="{Binding ModelId, Mode=OneWay}" />
                                    <TextBlock
                                        Margin="12,0,0,0"
                                        FontSize="14"
                                        Foreground="#999999"
                                        Text=" | " />
                                    <TextBlock
                                        FontSize="14"
                                        Foreground="#555555"
                                        Text="{Binding BaseUrl, Mode=OneWay}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ui:Button
                                        Margin="0,0,8,0"
                                        Padding="8,4"
                                        Command="{Binding StartEditCommand}"
                                        Content="编辑"
                                        Visibility="{Binding IsEditing, Converter={StaticResource InvertBoolToVis}}" />
                                    <ui:Button
                                        Margin="0,0,8,0"
                                        Padding="8,4"
                                        Command="{Binding SaveCommand}"
                                        Content="保存"
                                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}" />
                                    <ui:Button
                                        Padding="8,4"
                                        Command="{Binding CancelCommand}"
                                        Content="取消"
                                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}" />
                                </StackPanel>
                            </Grid>

                            <!-- Editable Fields (shown when editing) -->
                            <StackPanel
                                Grid.Row="1"
                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="API Key:" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="Model ID:" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        Text="{Binding ModelId, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="Base URL:" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        Text="{Binding BaseUrl, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Status Message -->
        <Border
            Grid.Row="2"
            Margin="0,12,0,0"
            Padding="8"
            Background="#F0F0F0"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="4">
            <TextBlock Text="{Binding ViewModel.StatusMessage}" />
        </Border>
    </Grid>
</Page>

