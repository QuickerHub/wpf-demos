<Page
    x:Class="QuickerExpressionAgent.Desktop.Pages.ExpressionGeneratorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:behaviors="clr-namespace:QuickerExpressionAgent.Desktop.Behaviors"
    xmlns:controls="clr-namespace:QuickerExpressionAgent.Desktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Desktop.Pages"
    xmlns:localConverters="clr-namespace:QuickerExpressionAgent.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="表达式生成器"
    d:DataContext="{d:DesignInstance local:ExpressionGeneratorPage,
                                     IsDesignTimeCreatable=False}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <localConverters:InvertBooleanConverter x:Key="InvertBooleanConverter" />
        <localConverters:MessageTypeConverter x:Key="MessageTypeConverter" />
        <localConverters:NullToBoolConverter x:Key="NullToBoolConverter" />

        <!--  Custom Expander Style for ToolCall - Transparent, no border, minimal  -->
        <Style x:Key="ToolCallExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ExpandDirection" Value="Down" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Grid Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!--  Header ToggleButton - Transparent with expander icon  -->
                            <ToggleButton
                                x:Name="ExpanderToggleButton"
                                Grid.Row="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}, Mode=TwoWay}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <!--  Header Content  -->
                                                <ContentPresenter
                                                    Grid.Column="0"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    Content="{TemplateBinding Content}"
                                                    ContentTemplate="{TemplateBinding ContentTemplate}" />
                                                <!--  Expander Icon - Right side, show on hover  -->
                                                <ui:SymbolIcon
                                                    x:Name="ExpanderIcon"
                                                    Grid.Column="1"
                                                    Width="12"
                                                    Height="12"
                                                    Margin="6,0,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                    Foreground="{ui:ThemeResource TextFillColorDisabledBrush}"
                                                    Opacity="0"
                                                    Symbol="ChevronRight12">
                                                    <ui:SymbolIcon.Style>
                                                        <Style TargetType="ui:SymbolIcon">
                                                            <Style.Triggers>
                                                                <!--  Show on hover - bind to parent ToggleButton  -->
                                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                                    <Setter Property="Opacity" Value="1" />
                                                                </DataTrigger>
                                                                <!--  Change symbol when expanded  -->
                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                                    <Setter Property="Symbol" Value="ChevronDown12" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ui:SymbolIcon.Style>
                                                </ui:SymbolIcon>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                                <ContentPresenter Content="{TemplateBinding Header}" />
                            </ToggleButton>
                            <!--  Content  -->
                            <ContentPresenter
                                Grid.Row="1"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                Visibility="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}, Converter={StaticResource BoolToVis}}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="AI 表达式生成器" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ComboBox
                    x:Name="ApiConfigComboBox"
                    MinWidth="250"
                    Margin="0,0,10,0"
                    ItemsSource="{Binding ViewModel.AgentViewModel.AvailableApiConfigs}"
                    SelectedItem="{Binding ViewModel.AgentViewModel.SelectedApiConfig, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding VisualTitle}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ui:Button
                    Padding="10,5"
                    Command="{Binding ViewModel.OpenChatWindowCommand}"
                    Content="Chat 窗口" />
            </StackPanel>
        </Grid>

        <!--  Results Section  -->
        <GroupBox
            Grid.Row="1"
            Margin="0,0,0,20"
            Header="生成结果">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="350" />
                </Grid.ColumnDefinitions>

                <!--  Left: Expression  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Parsed Expression  -->
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        FontWeight="SemiBold"
                        Text="解析后的表达式：" />

                    <avalonEdit:TextEditor
                        x:Name="ParsedExpressionEditor"
                        Grid.Row="1"
                        Margin="0,0,0,15"
                        SyntaxHighlighting="C#" />

                    <!--  Execution Result  -->
                    <TextBlock
                        Grid.Row="2"
                        Margin="0,15,0,10"
                        FontWeight="SemiBold"
                        Text="执行结果：" />

                    <ScrollViewer
                        Grid.Row="3"
                        MaxHeight="200"
                        VerticalScrollBarVisibility="Auto">
                        <TextBlock
                            FontFamily="Consolas"
                            FontSize="12"
                            Foreground="{Binding ViewModel.ResultForeground}"
                            Text="{Binding ViewModel.ExecutionResult, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </Grid>

                <!--  Right: Variable List  -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Variable List Header  -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:Button
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Padding="8,4"
                            Command="{Binding ViewModel.CreateVariableCommand}"
                            Content="+ 添加变量"
                            FontSize="12" />
                    </Grid>

                    <!--  Variable List  -->
                    <ListBox
                        Grid.Row="1"
                        Background="Transparent"
                        BorderBrush="{ui:ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        ItemsSource="{Binding ViewModel.VariableList}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,5"
                                    Padding="10,8"
                                    BorderBrush="{ui:ThemeResource ControlStrokeColorSecondaryBrush}"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!--  Type Icon  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Top"
                                            FontSize="16">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="ABC" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsListType}" Value="True">
                                                            <Setter Property="Text" Value="☰" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!--  Variable Name  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,0,0,5"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="{Binding VarName}" />

                                        <!--  Variable Value Input  -->
                                        <ui:TextBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            MinHeight="30"
                                            AcceptsReturn="True"
                                            FontSize="12"
                                            Text="{Binding ValueText, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!--  Execute Button  -->
                    <ui:Button
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        Padding="10,8"
                        HorizontalAlignment="Stretch"
                        Command="{Binding ViewModel.ExecuteExpressionCommand}"
                        Content="执行表达式"
                        FontSize="14"
                        IsEnabled="{Binding ViewModel.IsGenerating, Converter={StaticResource InvertBooleanConverter}}" />
                </Grid>

                <!--  Right: Agent Chat  -->
                <GroupBox
                    Grid.Column="4"
                    Margin="10,0,0,0"
                    Header="Agent 对话">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Chat Messages ListBox  -->
                        <ListBox
                            x:Name="ChatListBox"
                            Grid.Row="0"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding ViewModel.ChatMessages}"
                            ScrollViewer.CanContentScroll="False"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectionMode="Single">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVis}}" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.Resources>
                                <!--  Default template for text messages  -->
                                <DataTemplate x:Key="TextMessageTemplate">
                                    <Border
                                        Margin="0,1,0,1"
                                        Padding="0"
                                        CornerRadius="6">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <!--  Default: User messages - White box  -->
                                                <Setter Property="Background" Value="{ui:ThemeResource ControlFillColorDefaultBrush}" />
                                                <Setter Property="BorderBrush" Value="{ui:ThemeResource ControlStrokeColorSecondaryBrush}" />
                                                <Setter Property="BorderThickness" Value="1" />
                                                <!--  Assistant messages - Transparent, blend with background  -->
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding MessageType}" Value="Assistant">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="BorderThickness" Value="0" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <!--  Message Content  -->
                                        <ContentControl VerticalContentAlignment="Center" Content="{Binding}">
                                            <ContentControl.Style>
                                                <Style TargetType="ContentControl">
                                                    <!--  Default: TextBlock for User messages  -->
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <Border Padding="12">
                                                                    <TextBlock
                                                                        FontSize="12"
                                                                        Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                                                                        Text="{Binding Content}"
                                                                        TextWrapping="Wrap" />
                                                                </Border>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <!--  Markdown for Assistant messages  -->
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding MessageType}" Value="Assistant">
                                                            <Setter Property="ContentTemplate">
                                                                <Setter.Value>
                                                                    <DataTemplate>
                                                                        <md:MarkdownScrollViewer
                                                                            Background="Transparent"
                                                                            IsEnabled="False"
                                                                            Markdown="{Binding Content}" />
                                                                    </DataTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>
                                    </Border>
                                </DataTemplate>

                                <!--  Template for ExpressionTest messages with ExpressionItem  -->
                                <DataTemplate x:Key="ExpressionTestTemplate">
                                    <Border
                                        Margin="0,5,0,5"
                                        Padding="12,8"
                                        Background="{Binding BackgroundBrush}"
                                        CornerRadius="8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  Message Header  -->
                                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Icon}" />

                                                <TextBlock
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding MessageType, Converter={StaticResource MessageTypeConverter}}" />

                                                <TextBlock
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                    Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                                    Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" />
                                            </Grid>

                                            <!--  ExpressionItem Control  -->
                                            <controls:ExpressionItemControl Grid.Row="1" ViewModel="{Binding ExpressionItem}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>

                                <!--  Template for ToolCall messages with ToolCallItem  -->
                                <DataTemplate x:Key="ToolCallTemplate">
                                    <Border
                                        Margin="0,1,0,1"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <Expander
                                            Margin="0"
                                            IsExpanded="{Binding ToolCallItem.IsExpanded}"
                                            Style="{StaticResource ToolCallExpanderStyle}">
                                            <!--  Expander Header - Simplified and subtle  -->
                                            <Expander.Header>
                                                <TextBlock
                                                    Padding="12,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                    Foreground="{ui:ThemeResource TextFillColorDisabledBrush}"
                                                    Text="{Binding ToolCallItem.FunctionName}" />
                                            </Expander.Header>

                                            <!--  Expander Content - Markdown Display  -->
                                            <Border
                                                Margin="12,6"
                                                BorderBrush="{ui:ThemeResource ControlStrokeColorSecondaryBrush}"
                                                BorderThickness="1"
                                                CornerRadius="6">
                                                <md:MarkdownScrollViewer
                                                    Margin="12,4,12,0"
                                                    Background="Transparent"
                                                    IsEnabled="False"
                                                    Markdown="{Binding ToolCallItem.MarkdownContent}"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                    ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                                            </Border>
                                        </Expander>
                                    </Border>
                                </DataTemplate>
                            </ListBox.Resources>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Setter Property="ContentTemplate" Value="{StaticResource TextMessageTemplate}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ExpressionItem, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                        <Setter Property="ContentTemplate" Value="{StaticResource ExpressionTestTemplate}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ToolCallItem, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                        <Setter Property="ContentTemplate" Value="{StaticResource ToolCallTemplate}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!--  Input Section  -->
                        <Border
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            Padding="10,8"
                            Background="{ui:ThemeResource ControlFillColorSecondaryBrush}"
                            BorderBrush="{ui:ThemeResource ControlStrokeColorSecondaryBrush}"
                            BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <controls:CodeTextControl
                                    x:Name="ChatInputCodeTextControl"
                                    Grid.Column="0"
                                    MinHeight="40"
                                    MaxHeight="100"
                                    Margin="0,0,10,0"
                                    CodeText="{Binding ViewModel.ChatInputText, UpdateSourceTrigger=PropertyChanged}"
                                    CompletionItems="{Binding ViewModel.CompletionItems}"
                                    EnterCommand="{Binding ViewModel.GenerateCommand}" />

                                <ui:Button
                                    Grid.Column="1"
                                    MinWidth="80"
                                    Padding="20,8"
                                    Command="{Binding ViewModel.GenerateCommand}"
                                    Content="发送"
                                    FontSize="14"
                                    IsEnabled="{Binding ViewModel.IsGenerating, Converter={StaticResource InvertBooleanConverter}}" />
                            </Grid>
                        </Border>

                        <!--  Status Footer  -->
                        <Border
                            Grid.Row="2"
                            Padding="10,5"
                            Background="{ui:ThemeResource ControlFillColorTertiaryBrush}"
                            BorderBrush="{ui:ThemeResource ControlStrokeColorSecondaryBrush}"
                            BorderThickness="0,1,0,0"
                            Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="11"
                                Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                Text="Agent 正在运行中..." />
                        </Border>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

        <!--  Status Bar  -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding ViewModel.StatusText, Mode=OneWay}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar
                    Width="100"
                    Height="16"
                    IsIndeterminate="{Binding ViewModel.IsGenerating}"
                    Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>

