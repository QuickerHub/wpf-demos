<Page
    x:Class="QuickerExpressionAgent.Desktop.Pages.ExpressionGeneratorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:behaviors="clr-namespace:QuickerExpressionAgent.Desktop.Behaviors"
    xmlns:controls="clr-namespace:QuickerExpressionAgent.Desktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Desktop.Pages"
    xmlns:localConverters="clr-namespace:QuickerExpressionAgent.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="è¡¨è¾¾å¼ç”Ÿæˆå™¨"
    d:DataContext="{d:DesignInstance local:ExpressionGeneratorPage,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <localConverters:InvertBooleanConverter x:Key="InvertBooleanConverter" />
        <localConverters:MessageTypeConverter x:Key="MessageTypeConverter" />
        <localConverters:NullToBoolConverter x:Key="NullToBoolConverter" />
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="AI è¡¨è¾¾å¼ç”Ÿæˆå™¨" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:Button
                    Margin="0,0,10,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.OpenChatWindowCommand}"
                    Content="Chat çª—å£" />
            </StackPanel>
        </Grid>

        <!--  Results Section  -->
        <GroupBox
            Grid.Row="1"
            Margin="0,0,0,20"
            Header="ç”Ÿæˆç»“æžœ">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="350" />
                </Grid.ColumnDefinitions>

                <!--  Left: Expression  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Parsed Expression  -->
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        FontWeight="SemiBold"
                        Text="è§£æžåŽçš„è¡¨è¾¾å¼ï¼š" />

                    <avalonEdit:TextEditor
                        x:Name="ParsedExpressionEditor"
                        Grid.Row="1"
                        Margin="0,0,0,15"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        FontFamily="Consolas"
                        FontSize="12"
                        HorizontalScrollBarVisibility="Auto"
                        ShowLineNumbers="True"
                        SyntaxHighlighting="C#"
                        VerticalScrollBarVisibility="Auto"
                        WordWrap="True" />

                    <!--  Execution Result  -->
                    <TextBlock
                        Grid.Row="2"
                        Margin="0,15,0,10"
                        FontWeight="SemiBold"
                        Text="æ‰§è¡Œç»“æžœï¼š" />

                    <ScrollViewer
                        Grid.Row="3"
                        MaxHeight="200"
                        VerticalScrollBarVisibility="Auto">
                        <TextBlock
                            FontFamily="Consolas"
                            FontSize="12"
                            Foreground="{Binding ViewModel.ResultForeground}"
                            Text="{Binding ViewModel.ExecutionResult, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </Grid>

                <!--  Right: Variable List  -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Variable List Header  -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Text="å˜é‡æµ‹è¯•å€¼" />
                        <ui:Button
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Padding="8,4"
                            Command="{Binding ViewModel.CreateVariableCommand}"
                            Content="+ æ·»åŠ å˜é‡"
                            FontSize="12" />
                    </Grid>

                    <!--  Variable List  -->
                    <ListBox
                        Grid.Row="1"
                        Background="Transparent"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        ItemsSource="{Binding ViewModel.VariableList}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,5"
                                    Padding="10,8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!--  Type Icon  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Top"
                                            FontSize="16">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="ABC" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsListType}" Value="True">
                                                            <Setter Property="Text" Value="â˜°" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!--  Variable Name  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,0,0,5"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="{Binding VarName}" />

                                        <!--  Variable Value Input  -->
                                        <ui:TextBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            MinHeight="30"
                                            AcceptsReturn="True"
                                            FontSize="12"
                                            Text="{Binding ValueText, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!--  Execute Button  -->
                    <ui:Button
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        Padding="10,8"
                        HorizontalAlignment="Stretch"
                        Command="{Binding ViewModel.ExecuteExpressionCommand}"
                        Content="æ‰§è¡Œè¡¨è¾¾å¼"
                        FontSize="14"
                        IsEnabled="{Binding ViewModel.IsGenerating, Converter={StaticResource InvertBooleanConverter}}" />
                </Grid>

                <!--  Right: Agent Chat  -->
                <GroupBox
                    Grid.Column="4"
                    Margin="10,0,0,0"
                    Header="Agent å¯¹è¯">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Chat Messages ListBox  -->
                        <ListBox
                            x:Name="ChatListBox"
                            Grid.Row="0"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding ViewModel.ChatMessages}"
                            ScrollViewer.CanContentScroll="False"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectionMode="Single">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.Resources>
                                <!--  Default template for text messages  -->
                                <DataTemplate x:Key="TextMessageTemplate">
                                    <Border
                                        Margin="0,5,0,5"
                                        Padding="12,8"
                                        Background="{Binding BackgroundBrush}"
                                        CornerRadius="8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  Message Header  -->
                                            <Grid Grid.Row="0" Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Icon}" />

                                                <TextBlock
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding MessageType, Converter={StaticResource MessageTypeConverter}}" />

                                                <TextBlock
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                    Foreground="#666666"
                                                    Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" />
                                            </Grid>

                                            <!--  Message Content  -->
                                            <ContentControl Grid.Row="1" Content="{Binding}">
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <!--  Default: TextBlock for User messages  -->
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <TextBlock
                                                                        FontFamily="Segoe UI, Microsoft YaHei, sans-serif"
                                                                        FontSize="14"
                                                                        Foreground="{Binding ForegroundBrush}"
                                                                        LineHeight="24"
                                                                        Text="{Binding Content}"
                                                                        TextWrapping="Wrap" />
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <!--  Markdown for Assistant messages  -->
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MessageType}" Value="Assistant">
                                                                <Setter Property="ContentTemplate">
                                                                    <Setter.Value>
                                                                        <DataTemplate>
                                                                            <md:MarkdownScrollViewer Background="Transparent" Markdown="{Binding Content}" />
                                                                        </DataTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>
                                        </Grid>
                                    </Border>
                                </DataTemplate>

                                <!--  Template for ExpressionTest messages with ExpressionItem  -->
                                <DataTemplate x:Key="ExpressionTestTemplate">
                                    <Border
                                        Margin="0,5,0,5"
                                        Padding="12,8"
                                        Background="{Binding BackgroundBrush}"
                                        CornerRadius="8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  Message Header  -->
                                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    Text="{Binding Icon}" />

                                                <TextBlock
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding MessageType, Converter={StaticResource MessageTypeConverter}}" />

                                                <TextBlock
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                    Foreground="#666666"
                                                    Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" />
                                            </Grid>

                                            <!--  ExpressionItem Control  -->
                                            <controls:ExpressionItemControl Grid.Row="1" ViewModel="{Binding ExpressionItem}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>

                                <!--  Template for ToolCall messages with ToolCallItem  -->
                                <DataTemplate x:Key="ToolCallTemplate">
                                    <Border
                                        Margin="0,5,0,5"
                                        Padding="12,8"
                                        Background="{Binding BackgroundBrush}"
                                        CornerRadius="8">
                                        <Expander IsExpanded="{Binding ToolCallItem.IsExpanded}">
                                            <!--  Expander Header  -->
                                            <Expander.Header>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"
                                                        FontSize="16"
                                                        Text="ðŸ”§" />

                                                    <TextBlock
                                                        Grid.Column="1"
                                                        VerticalAlignment="Center"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Text="{Binding ToolCallItem.FunctionName, StringFormat='å·¥å…·è°ƒç”¨: {0}'}" />

                                                    <TextBlock
                                                        Grid.Column="2"
                                                        VerticalAlignment="Center"
                                                        FontSize="10"
                                                        Foreground="#666666"
                                                        Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" />
                                                </Grid>
                                            </Expander.Header>

                                            <!--  Expander Content - Markdown Display  -->
                                            <md:MarkdownScrollViewer
                                                Margin="0,8,0,0"
                                                Background="Transparent"
                                                Markdown="{Binding ToolCallItem.MarkdownContent}"
                                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                                        </Expander>
                                    </Border>
                                </DataTemplate>
                            </ListBox.Resources>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Setter Property="ContentTemplate" Value="{StaticResource TextMessageTemplate}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ExpressionItem, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                        <Setter Property="ContentTemplate" Value="{StaticResource ExpressionTestTemplate}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ToolCallItem, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                        <Setter Property="ContentTemplate" Value="{StaticResource ToolCallTemplate}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!--  Input Section  -->
                        <Border
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            Padding="10,8"
                            Background="#F5F5F5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ui:TextBox
                                    x:Name="ChatInputTextBox"
                                    Grid.Column="0"
                                    MinHeight="40"
                                    MaxHeight="100"
                                    Margin="0,0,10,0"
                                    Padding="10,8"
                                    behaviors:EnterCommandBehavior.EnterCommand="{Binding ViewModel.GenerateCommand}"
                                    AcceptsReturn="True"
                                    FontSize="14"
                                    Text="{Binding ViewModel.ChatInputText, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />

                                <ui:Button
                                    Grid.Column="1"
                                    MinWidth="80"
                                    Padding="20,8"
                                    Command="{Binding ViewModel.GenerateCommand}"
                                    Content="å‘é€"
                                    FontSize="14"
                                    IsEnabled="{Binding ViewModel.IsGenerating, Converter={StaticResource InvertBooleanConverter}}" />
                            </Grid>
                        </Border>

                        <!--  Status Footer  -->
                        <Border
                            Grid.Row="2"
                            Padding="10,5"
                            Background="#F0F0F0"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0"
                            Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="11"
                                Foreground="#666666"
                                Text="Agent æ­£åœ¨è¿è¡Œä¸­..." />
                        </Border>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

        <!--  Status Bar  -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding ViewModel.StatusText, Mode=OneWay}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar
                    Width="100"
                    Height="16"
                    IsIndeterminate="{Binding ViewModel.IsGenerating}"
                    Visibility="{Binding ViewModel.IsGenerating, Converter={StaticResource BoolToVis}}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>

