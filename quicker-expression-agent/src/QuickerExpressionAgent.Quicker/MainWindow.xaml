<Window
    x:Class="QuickerExpressionAgent.Quicker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:QuickerExpressionAgent.Quicker.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerExpressionAgent.Quicker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Quicker Expression Agent"
    Width="1200"
    Height="700"
    d:DataContext="{d:DesignInstance Type=local:MainWindow,
                                     IsDesignTimeCreatable=True}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Status Bar  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <!--  Connection Status  -->
            <Border
                Grid.Column="0"
                Padding="10,5"
                Background="{Binding ViewModel.IsConnected, Converter={StaticResource BooleanToBrushConverter}}">
                <StackPanel Orientation="Horizontal">
                    <Ellipse
                        Width="10"
                        Height="10"
                        Margin="0,0,8,0"
                        Fill="{Binding ViewModel.IsConnected, Converter={StaticResource BooleanToBrushConverter}}" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="{Binding ViewModel.ConnectionStatus}" />
                </StackPanel>
            </Border>
            
            <!--  .NET Version Status  -->
            <Border
                Grid.Column="1"
                Margin="10,5,10,5"
                Padding="10,5"
                Background="{Binding ViewModel.IsDotNet80Installed, Converter={StaticResource BooleanToBrushConverter}}">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="White"
                    Text="{Binding ViewModel.DotNetVersionStatus}" />
            </Border>
        </Grid>

        <!--  Main Content  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10">
                <Button
                    Margin="0,0,10,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.StartDesktopCommand}"
                    Content="启动 Desktop" />
                <Button
                    Margin="0,0,10,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.OpenDotNetInstallWindowCommand}"
                    Content="安装 .NET 8.0" />
                <Button
                    Padding="10,5"
                    Command="{Binding ViewModel.OpenTestWindowCommand}"
                    Content="测试窗口" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="200"
                    MinHeight="60"
                    Padding="20,15"
                    FontSize="18"
                    Command="{Binding ViewModel.ShutdownDesktopCommand}"
                    Content="退出 Desktop" />
            </Grid>
        </Grid>
    </Grid>
</Window>

