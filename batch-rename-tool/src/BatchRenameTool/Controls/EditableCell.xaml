<UserControl
    x:Class="BatchRenameTool.Controls.EditableCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BatchRenameTool.Converters"
    MouseDoubleClick="UserControl_MouseDoubleClick">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InvertBooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <TextBlock
            x:Name="DisplayTextBlock"
            Padding="4,2"
            VerticalAlignment="Center"
            TextTrimming="CharacterEllipsis"
            Visibility="{Binding IsEditing, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InvertBooleanToVisibilityConverter}}" />
        <TextBox
            x:Name="EditTextBox"
            Padding="4,2"
            VerticalContentAlignment="Center"
            BorderBrush="#4A90E2"
            BorderThickness="1"
            IsVisibleChanged="EditTextBox_IsVisibleChanged"
            KeyDown="EditTextBox_KeyDown"
            Loaded="EditTextBox_Loaded"
            LostFocus="EditTextBox_LostFocus"
            Style="{x:Null}"
            Visibility="{Binding IsEditing, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>
