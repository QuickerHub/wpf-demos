<Window
    x:Class="BatchRenameTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:BatchRenameTool.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BatchRenameTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BatchRenameTool.ViewModels"
    Title="批量重命名工具"
    Width="1000"
    Height="600"
    d:DataContext="{d:DesignInstance local:MainWindow,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    Background="{DynamicResource RegionBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="16" Background="{DynamicResource RegionBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="批量重命名工具" />
            <Button
                x:Name="HelpButton"
                Grid.Column="1"
                Padding="10,5"
                Click="HelpButton_Click"
                Content="❓ 帮助"
                ToolTip="查看使用帮助" />
            <Popup
                x:Name="HelpPopup"
                AllowsTransparency="True"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=HelpButton}"
                PopupAnimation="Fade"
                StaysOpen="False">
                <Border
                    MaxWidth="650"
                    MaxHeight="600"
                    Padding="0"
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Opacity="0.3"
                            ShadowDepth="3"
                            Color="Black" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Title  -->
                        <Border
                            Grid.Row="0"
                            Padding="15,12"
                            Background="{DynamicResource SecondaryRegionBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="使用帮助" />
                                <Button
                                    Grid.Column="1"
                                    Padding="5,2"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="CloseHelpPopup_Click"
                                    Content="✕"
                                    Cursor="Hand"
                                    FontSize="14"
                                    ToolTip="关闭" />
                            </Grid>
                        </Border>

                        <!--  Content  -->
                        <ScrollViewer
                            Grid.Row="1"
                            Padding="20"
                            VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!--  Basic Usage  -->
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    Text="基本使用" />
                                <TextBlock
                                    Margin="0,0,0,16"
                                    LineHeight="22"
                                    TextWrapping="Wrap">
                                    <Run FontWeight="Bold" Text="1. 点击" />
                                    <Run FontWeight="Bold" Text="“选择文件夹”" />
                                    <Run Text="按钮，选择包含要重命名文件的文件夹。" />
                                    <LineBreak />
                                    <Run Text="2. 文件列表会自动加载到预览窗口中，以表格形式显示重命名前后的文件名对比。" />
                                    <LineBreak />
                                    <Run FontWeight="Bold" Text="3. 在" />
                                    <Run FontWeight="Bold" Text="“重命名模式”" />
                                    <Run Text="输入框中输入重命名规则（可选）。" />
                                    <LineBreak />
                                    <Run FontWeight="Bold" Text="4. 预览重命名结果，确认无误后点击" />
                                    <Run FontWeight="Bold" Text="“执行重命名”" />
                                    <Run Text="按钮完成批量重命名。" />
                                </TextBlock>

                                <!--  Rename Pattern  -->
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="重命名模式" />
                                <TextBlock
                                    Margin="0,0,0,16"
                                    LineHeight="22"
                                    TextWrapping="Wrap">
                                    <Run FontWeight="Bold" Text="重命名模式支持以下占位符：" />
                                    <LineBreak />
                                    <Run Text="• {name} - 原文件名（不含扩展名）" />
                                    <LineBreak />
                                    <Run Text="• {ext} - 文件扩展名（不含点号）" />
                                    <LineBreak />
                                    <Run Text="• {fullname} - 完整文件名（包含扩展名）" />
                                    <LineBreak />
                                    <LineBreak />
                                    <Run FontWeight="Bold" Text="示例：" />
                                    <LineBreak />
                                    <Run FontStyle="Italic" Text="• 模式：" />
                                    <Run FontFamily="Consolas" Text="name_backup.ext" />
                                    <Run FontStyle="Italic" Text=" → 将" />
                                    <Run FontFamily="Consolas" Text="file.txt" />
                                    <Run FontStyle="Italic" Text="重命名为" />
                                    <Run FontFamily="Consolas" Text="file_backup.txt" />
                                    <LineBreak />
                                    <Run FontStyle="Italic" Text="• 模式：" />
                                    <Run FontFamily="Consolas" Text="New_{fullname}" />
                                    <Run FontStyle="Italic" Text=" → 将" />
                                    <Run FontFamily="Consolas" Text="file.txt" />
                                    <Run FontStyle="Italic" Text="重命名为" />
                                    <Run FontFamily="Consolas" Text="New_file.txt" />
                                    <LineBreak />
                                    <Run FontStyle="Italic" Text="• 留空模式 → 默认添加" />
                                    <Run FontFamily="Consolas" Text="New_" />
                                    <Run Text="前缀" />
                                </TextBlock>

                                <!--  Features  -->
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="功能特性" />
                                <TextBlock
                                    Margin="0,0,0,16"
                                    LineHeight="22"
                                    TextWrapping="Wrap">
                                    <Run FontWeight="Bold" Text="• " />
                                    <Run FontWeight="Bold" Text="表格预览：" />
                                    <Run Text="以表格形式显示重命名前后的文件名，方便对比查看" />
                                    <LineBreak />
                                    <Run FontWeight="Bold" Text="• " />
                                    <Run FontWeight="Bold" Text="高亮显示：" />
                                    <Run Text="重命名后的文件名会以蓝色高亮显示，便于识别变化" />
                                    <LineBreak />
                                    <Run FontWeight="Bold" Text="• " />
                                    <Run FontWeight="Bold" Text="多选支持：" />
                                    <Run Text="支持单选和多选，方便批量操作" />
                                    <LineBreak />
                                    <Run FontWeight="Bold" Text="• " />
                                    <Run FontWeight="Bold" Text="实时预览：" />
                                    <Run Text="修改重命名模式后实时更新预览结果" />
                                    <LineBreak />
                                    <Run FontWeight="Bold" Text="• " />
                                    <Run FontWeight="Bold" Text="多选支持：" />
                                    <Run Text="按住 Ctrl 键点击多个项，或按住 Shift 键选择范围" />
                                </TextBlock>

                                <!--  Tips  -->
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="使用技巧" />
                                <TextBlock
                                    Margin="0,0,0,0"
                                    LineHeight="22"
                                    TextWrapping="Wrap">
                                    <Run Text="• 在预览列表中，可以拖动列标题调整列宽" />
                                    <LineBreak />
                                    <Run Text="• 使用键盘方向键可以在列表中导航" />
                                    <LineBreak />
                                    <Run Text="• 如果重命名后的文件名已存在，该文件会被跳过" />
                                    <LineBreak />
                                    <Run Text="• 重命名操作不可撤销，请谨慎操作" />
                                </TextBlock>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Popup>
        </Grid>

        <!--  Controls  -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  File Selection  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,8"
                Orientation="Horizontal">
                <Button
                    Padding="10,5"
                    Click="SelectFolderButton_Click"
                    Content="选择文件夹" />
                <Button
                    Margin="8,0,0,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.AddFilesFromDialogCommand}"
                    Content="添加文件" />
                <Button
                    Margin="8,0,0,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.PasteFilesCommand}"
                    Content="粘贴文件" />
                <Button
                    x:Name="RemoveSelectedButton"
                    Margin="8,0,0,0"
                    Padding="10,5"
                    Click="RemoveSelectedItemsButton_Click"
                    Content="排除选中"
                    ToolTip="从列表中移除选中的文件" />
                <Button
                    Margin="8,0,0,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.ClearItemsCommand}"
                    Content="清空列表" />
            </StackPanel>

            <!--  Rename Pattern  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Text="重命名模式：" />
                <controls:CodeTextBox
                    x:Name="RenamePatternTextBox"
                    Grid.Column="1"
                    Margin="0,0,8,0"
                    FontSize="15"
                    VerticalContentAlignment="Center"
                    CodeText="{Binding ViewModel.RenamePattern, UpdateSourceTrigger=PropertyChanged}"
                    CompletionService="{Binding ViewModel.CompletionService}"
                    ToolTip="重命名模式，使用 {name} 表示原文件名（不含扩展名），{ext} 表示扩展名，{fullname} 表示完整文件名。留空则添加 New_ 前缀。输入 { 可查看可用变量。" />
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button
                        Margin="0,0,8,0"
                        Padding="15,5"
                        Command="{Binding ViewModel.UndoRenameCommand}"
                        Content="撤销"
                        ToolTip="撤销上一次重命名操作" />
                    <Button
                        Padding="15,5"
                        Command="{Binding ViewModel.ExecuteRenameCommand}"
                        Content="执行重命名"
                        FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Grid>

        <!--  Preview List  -->
        <GroupBox Grid.Row="2" Header="文件列表">
            <ListView
                x:Name="FileListView"
                BorderThickness="0"
                ItemsSource="{Binding ViewModel.Items}"
                SelectionMode="Extended">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" Header="重命名前">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="5,2"
                                        Text="{Binding OriginalName}"
                                        TextWrapping="Wrap"
                                        ToolTip="{Binding OriginalName}"
                                        ToolTipService.InitialShowDelay="500" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="Auto" Header="重命名后">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="5,2"
                                        Text="{Binding NewName}"
                                        TextWrapping="Wrap"
                                        ToolTip="{Binding NewName}"
                                        ToolTipService.InitialShowDelay="500">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsNameChanged}" Value="True">
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!--  Status Bar  -->
        <TextBlock
            Grid.Row="3"
            Margin="0,16,0,0"
            Foreground="{DynamicResource SecondaryTextBrush}"
            Text="{Binding ViewModel.StatusMessage}" />
    </Grid>
</Window>
