<Window
    x:Class="BatchRenameTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:BatchRenameTool.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="clr-namespace:FontAwesome5.WPF;assembly=FontAwesomeIconsWpf"
    xmlns:local="clr-namespace:BatchRenameTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BatchRenameTool.ViewModels"
    Title="批量重命名工具"
    Width="1000"
    Height="600"
    d:DataContext="{d:DesignInstance local:MainWindow,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    Background="{DynamicResource RegionBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="16" Background="{DynamicResource RegionBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="批量重命名工具" />
            <controls:PopupHelpButton
                Title="使用帮助"
                Grid.Column="1"
                ResourcePath="Help.md" />
        </Grid>

        <!--  Controls  -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  File Selection  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,8"
                Orientation="Horizontal">
                <Button
                    Padding="10,5"
                    Click="SelectFolderButton_Click"
                    Content="选择文件夹" />
                <Button
                    Margin="8,0,0,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.AddFilesFromDialogCommand}"
                    Content="添加文件" />
                <Button
                    Margin="8,0,0,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.PasteFilesCommand}"
                    Content="粘贴文件" />
                <Button
                    x:Name="RemoveSelectedButton"
                    Margin="8,0,0,0"
                    Padding="10,5"
                    Click="RemoveSelectedItemsButton_Click"
                    Content="排除选中"
                    ToolTip="从列表中移除选中的文件" />
                <Button
                    Margin="8,0,0,0"
                    Padding="10,5"
                    Command="{Binding ViewModel.ClearItemsCommand}"
                    Content="清空列表" />
                <Button
                    x:Name="DemoButton"
                    Margin="8,0,0,0"
                    Padding="10,5"
                    Click="DemoButton_Click"
                    Content="示例"
                    ToolTip="查看模式串示例">
                    <Button.ContextMenu>
                        <ContextMenu x:Name="DemoMenu" />
                    </Button.ContextMenu>
                </Button>
            </StackPanel>

            <!--  Rename Pattern  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Text="重命名模式：" />
                <Grid Grid.Column="1" Margin="0,0,8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="AddPrefixButton"
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        Padding="10,5"
                        Click="AddPrefixButton_Click"
                        Content="加前缀"
                        ToolTip="在文件名前添加前缀" />
                    <Button
                        x:Name="AddSuffixButton"
                        Grid.Column="1"
                        Margin="0,0,5,0"
                        Padding="10,5"
                        Click="AddSuffixButton_Click"
                        Content="加后缀"
                        ToolTip="在文件名后添加后缀" />
                    <controls:TemplateInputBox
                        x:Name="RenamePatternTextBox"
                        Grid.Column="2"
                        Text="{Binding ViewModel.RenamePattern, UpdateSourceTrigger=PropertyChanged}"
                        CompletionService="{Binding ViewModel.CompletionService}"
                        ToolTip="重命名模式，使用 {name} 表示原文件名（不含扩展名），{ext} 表示扩展名，{fullname} 表示完整文件名。留空则添加 New_ 前缀。输入 { 可查看可用变量。" />
                </Grid>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button
                        Margin="0,0,8,0"
                        Padding="15,5"
                        Command="{Binding ViewModel.UndoRenameCommand}"
                        Content="撤销"
                        ToolTip="撤销上一次重命名操作" />
                    <Button
                        Padding="15,5"
                        Command="{Binding ViewModel.ExecuteRenameCommand}"
                        Content="执行重命名"
                        FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Grid>

        <!--  Preview List  -->
        <GroupBox Grid.Row="2" Header="文件列表">
            <ListView
                x:Name="FileListView"
                BorderThickness="0"
                ItemsSource="{Binding ViewModel.Items}"
                SelectionMode="Extended">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" Header="重命名前">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="5,2"
                                        Text="{Binding OriginalName}"
                                        TextWrapping="Wrap"
                                        ToolTip="{Binding OriginalName}"
                                        ToolTipService.InitialShowDelay="500" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="Auto" Header="重命名后">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="5,2"
                                        Text="{Binding NewName}"
                                        TextWrapping="Wrap"
                                        ToolTip="{Binding NewName}"
                                        ToolTipService.InitialShowDelay="500">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsNameChanged}" Value="True">
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!--  Status Bar  -->
        <TextBlock
            Grid.Row="3"
            Margin="0,16,0,0"
            Foreground="{DynamicResource SecondaryTextBrush}"
            Text="{Binding ViewModel.StatusMessage}" />
    </Grid>
</Window>
