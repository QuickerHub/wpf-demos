<Window
    x:Class="QuickerActionManage.View.ActionManageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuickerActionManage.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ActionManageWindow"
    Width="1400"
    Height="800"
    MinWidth="800"
    MinHeight="600"
    d:Height="300"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="200"
                MinWidth="150"
                MaxWidth="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <local:SubprogramControl x:Name="TheSubProgramControl" Margin="0,0,3,0" />
        <GridSplitter Width="3" />
        <local:ActionManageControl x:Name="TheActionManageControl" Grid.Column="1" />
    </Grid>
</Window>

