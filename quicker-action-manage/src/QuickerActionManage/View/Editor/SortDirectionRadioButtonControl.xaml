<UserControl
    x:Class="QuickerActionManage.View.Editor.SortDirectionRadioButtonControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    VerticalAlignment="Center"
    HorizontalAlignment="Left"
    MinHeight="22"
    Height="22"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="SortDirectionRadioButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Height" Value="22" />
            <Setter Property="MinHeight" Value="22" />
            <Setter Property="MaxHeight" Value="22" />
            <Setter Property="Padding" Value="5,0,0,0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="UseLayoutRounding" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>
    </UserControl.Resources>
    <Grid
        VerticalAlignment="Center"
        HorizontalAlignment="Left"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <RadioButton
            x:Name="AscendingRadio"
            Grid.Column="0"
            Content="升序"
            Margin="0,0,15,0"
            Style="{StaticResource SortDirectionRadioButtonStyle}" />
        <RadioButton
            x:Name="DescendingRadio"
            Grid.Column="1"
            Content="降序"
            Style="{StaticResource SortDirectionRadioButtonStyle}" />
    </Grid>
</UserControl>

