<Window x:Class="WindowEdgeHide.Services.TriggerAreaDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trigger Area Debug" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ShowActivated="False"
        Focusable="False"
        ResizeMode="NoResize">
    <Border BorderBrush="Red" 
            BorderThickness="2" 
            Background="#20FF0000"
            CornerRadius="0">
        <TextBlock Text="Trigger Area" 
                   Foreground="Red" 
                   FontSize="10"
                   Margin="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Border>
</Window>

