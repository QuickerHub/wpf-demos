<Window x:Class="WindowEdgeHide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window Edge Hide Test" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Window Edge Hide Test" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <TextBlock Text="Note: Window will be moved to the selected edge when enabled." 
                       TextWrapping="Wrap" 
                       Foreground="Gray" 
                       Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Edge Direction:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="EdgeComboBox" Width="120" SelectedIndex="4">
                    <ComboBoxItem Content="Left"/>
                    <ComboBoxItem Content="Top"/>
                    <ComboBoxItem Content="Right"/>
                    <ComboBoxItem Content="Bottom"/>
                    <ComboBoxItem Content="Nearest"/>
                </ComboBox>
            </StackPanel>

            <CheckBox x:Name="UseAnimationCheckBox" 
                      Content="Use Animation" 
                      IsChecked="True"
                      Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Visible Area:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="VisibleAreaTextBox" Width="120" Text="-5" VerticalAlignment="Center"/>
                <TextBlock Text="(e.g., 5, 5,6, or 1,2,3,4)" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray"/>
            </StackPanel>

            <Button Content="Enable Edge Hide for This Window" 
                    Click="EnableButton_Click" 
                    Padding="10,5" 
                    Margin="0,0,0,10"/>
            
            <Button Content="Disable Edge Hide" 
                    Click="DisableButton_Click" 
                    Padding="10,5" 
                    Margin="0,0,0,10"/>

            <TextBlock x:Name="StatusTextBlock" 
                       Text="Status: Not enabled" 
                       Margin="0,10,0,0" 
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>

