<Window
    x:Class="WindowEdgeHide.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window Edge Hide Test"
    Width="500"
    Height="500"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock
                Margin="0,0,0,20"
                FontSize="20"
                FontWeight="Bold"
                Text="Window Edge Hide Test" />

            <TextBlock
                Margin="0,0,0,15"
                Foreground="Gray"
                Text="Note: Window will be moved to the selected edge when enabled."
                TextWrapping="Wrap" />

            <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Text="Edge Direction:" />
                <ComboBox
                    x:Name="EdgeComboBox"
                    Width="120"
                    SelectedIndex="1">
                    <ComboBoxItem Content="Left" />
                    <ComboBoxItem Content="Top" />
                    <ComboBoxItem Content="Right" />
                    <ComboBoxItem Content="Bottom" />
                    <ComboBoxItem Content="Nearest" />
                    <ComboBoxItem Content="None" />
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Text="动画类型:" />
                <ComboBox
                    x:Name="AnimationTypeComboBox"
                    Width="150"
                    SelectedIndex="2">
                    <ComboBoxItem Content="None" />
                    <ComboBoxItem Content="Linear" />
                    <ComboBoxItem Content="EaseInOut" />
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Text="Visible Area:" />
                <TextBox
                    x:Name="VisibleAreaTextBox"
                    Width="120"
                    VerticalAlignment="Center"
                    Text="-5" />
                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Gray"
                    Text="(e.g., 5, 5,6, or 1,2,3,4)" />
            </StackPanel>

            <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Text="Show Delay (ms):" />
                <TextBox
                    x:Name="ShowDelayTextBox"
                    Width="120"
                    VerticalAlignment="Center"
                    Text="0" />
                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="Gray"
                    Text="(Delay before showing window)" />
            </StackPanel>

            <Button
                Margin="0,0,0,10"
                Padding="10,5"
                Click="EnableButton_Click"
                Content="Enable Edge Hide for This Window" />

            <Button
                Margin="0,0,0,10"
                Padding="10,5"
                Click="DisableButton_Click"
                Content="Disable Edge Hide" />

            <Separator Margin="0,10,0,10" />

            <Button
                Margin="0,0,0,10"
                Padding="10,5"
                Click="ManageButton_Click"
                Content="管理窗口" />

            <Button
                Margin="0,0,0,10"
                Padding="10,5"
                Click="StopAllButton_Click"
                Content="取消所有窗口贴边" />

            <TextBlock
                x:Name="StatusTextBlock"
                Margin="0,10,0,0"
                Foreground="Gray"
                Text="Status: Not enabled" />
        </StackPanel>
    </Grid>
</Window>

