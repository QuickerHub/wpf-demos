                    <StackPanel Orientation="Horizontal">
                        <TextBox
                            Text="{Binding ViewModel.MessageToWeb, UpdateSourceTrigger=PropertyChanged}"
                            Width="300"
                            Margin="0,0,5,0"
                            Padding="5" />
                        <Button
                            Command="{Binding ViewModel.SendMessageToWebCommand}"
                            Content="å‘é€"
