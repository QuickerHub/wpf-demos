        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border
            Grid.Row="0"
            Background="{DynamicResource SecondaryRegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button
                    Command="{Binding ViewModel.GoBackCommand}"
