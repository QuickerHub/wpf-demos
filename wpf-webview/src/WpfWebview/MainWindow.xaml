                        BorderThickness="1"
                        Padding="10"
                        MinHeight="40">
                        <TextBlock Text="{Binding ViewModel.MessageFromWeb}" TextWrapping="Wrap" />
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- WebView -->
        <Border
            Grid.Row="2"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,1,0,0">
            <Grid>
                <wv2:WebView2 x:Name="WebViewControl" />
                
                <!-- Loading overlay -->
                <Border
                    Background="{DynamicResource RegionBrush}"
                    Opacity="0.95"
                    Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                        <!-- Loading progress bar -->
                        <ProgressBar
                            IsIndeterminate="True"
                            Width="200"
                            Height="4"
                            Margin="0,0,0,20" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border
