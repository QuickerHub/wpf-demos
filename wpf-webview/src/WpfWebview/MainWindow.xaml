                    </StackPanel>
                </StackPanel>

                <!-- Receive from Web -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock
                        Text="æ¥è‡ªç½‘é¡µçš„æ¶ˆæ¯:"
