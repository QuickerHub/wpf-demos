<Window x:Class="QuickerActionPanel.Views.ActionPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:QuickerActionPanel.Views"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        x:Name="ThePanelWindow"
        Title="Action Panel" 
        Width="600" 
        Height="500"
        MinWidth="200"
        MinHeight="200"
        AllowsTransparency="True"
        Background="#01FFFFFF"
        ResizeMode="CanResize"
        ShowInTaskbar="False"

        Topmost="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="5"
            GlassFrameThickness="0"
            NonClientFrameEdges="None"
            ResizeBorderThickness="10 0 10 10"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackground" Color="White" />
        <CornerRadius x:Key="WindowCornerRadius">5</CornerRadius>
    </Window.Resources>
    <Grid Margin="10" hc:WindowAttach.IsDragElement="True">
        <Border
            Background="{DynamicResource WindowBackground}"
            BorderThickness="0"
            CornerRadius="{DynamicResource WindowCornerRadius}">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="-90"
                    Opacity="0.3"
                    RenderingBias="Quality"
                    ShadowDepth="0"
                    Color="#AAA" />
            </Border.Effect>
        </Border>
        <Grid Margin="2,10,2,2">
            <views:ActionPanelControl />
        </Grid>
    </Grid>
</Window>

