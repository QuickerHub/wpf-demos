<Window x:Class="QuickerActionPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:views="clr-namespace:QuickerActionPanel.Views"
        Title="Quicker Action Panel" 
        Width="800" 
        Height="600"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <views:ActionDropHandler x:Key="ActionDropHandler" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock 
                Text="Quicker Action Panel"
                FontSize="24"
                FontWeight="Bold"
                VerticalAlignment="Center"/>
            <Button 
                Content="Open Action Panel"
                Click="OpenActionPanelButton_Click"
                Padding="15,8"
                FontSize="14"
                Margin="20,0,0,0"
                Cursor="Hand"/>
        </StackPanel>
        
        <!-- Drop area -->
        <Border 
            Grid.Row="1"
            x:Name="DropArea"
            BorderBrush="Gray"
            BorderThickness="2"
            Background="LightGray"
            CornerRadius="5"
            Padding="20"
            dd:DragDrop.IsDropTarget="True"
            dd:DragDrop.DropHandler="{StaticResource ActionDropHandler}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock 
                    Text="Drop Quicker Actions Here"
                    FontSize="18"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"/>
                <TextBlock 
                    x:Name="DropStatusText"
                    Text="Ready to receive actions..."
                    FontSize="14"
                    Foreground="DarkGray"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
